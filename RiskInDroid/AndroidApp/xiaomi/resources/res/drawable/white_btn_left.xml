<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/mj_color_gray_lightest"/>
            <stroke android:width="1px" android:color="@color/mj_color_black_20_transparent"/>
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/mj_color_white"/>
            <stroke android:width="1px" android:color="@color/mj_color_black_20_transparent"/>
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp"/>
        </shape>
    </item>
</selector>
