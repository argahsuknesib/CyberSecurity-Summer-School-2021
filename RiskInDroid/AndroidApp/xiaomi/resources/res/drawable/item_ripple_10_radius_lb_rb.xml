<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/mj_color_gray_normal"/>
            <stroke android:color="@color/mj_color_gray_normal"/>
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mj_color_white"/>
            <stroke android:color="@color/mj_color_white"/>
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp"/>
        </shape>
    </item>
</selector>
