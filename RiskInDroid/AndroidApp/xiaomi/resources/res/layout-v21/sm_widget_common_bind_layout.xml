<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/progress_container" android:layout_width="match_parent" android:layout_height="280dp" android:layout_marginBottom="-20dp" android:layout_centerHorizontal="true">
        <com.xiaomi.smarthome.device.bluetooth.ui.CommonBindProgressView android:layout_gravity="center" android:id="@+id/progress_view" android:layout_width="219dp" android:layout_height="219dp"/>
        <View android:layout_gravity="center" android:id="@+id/progress_background" android:background="@drawable/common_bind_view_bg_shape" android:layout_width="199dp" android:layout_height="199dp"/>
        <FrameLayout android:layout_gravity="center" android:layout_width="280dp" android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/progress_lottie_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </FrameLayout>
        <ImageView android:layout_gravity="center" android:id="@+id/final_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerInside" android:importantForAccessibility="no"/>
    </FrameLayout>
    <TextView android:textSize="20sp" android:textColor="@color/mj_color_gray_heavier" android:gravity="center" android:id="@+id/progress_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginTop="14dp" android:layout_marginRight="14dp" android:layout_below="@+id/progress_container" android:layout_centerHorizontal="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/step_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:layout_marginTop="30dp" android:layout_marginRight="26dp" android:layout_below="@+id/progress_title"/>
    <Button android:textSize="13sp" android:textColor="@color/mj_color_white" android:id="@+id/common_btn" android:background="@drawable/blue_btn_bg" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="26dp" android:layout_marginRight="26dp" android:layout_marginBottom="26dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:elevation="0dp" android:stateListAnimator="@null"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/left_right_btn" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="26dp" android:layout_marginRight="26dp" android:layout_marginBottom="26dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <Button android:textSize="13sp" android:textColor="@color/mj_color_black" android:id="@+id/left_btn" android:background="@drawable/white_btn_left" android:layout_width="0dp" android:layout_height="45dp" android:text="@string/mj_retry" android:layout_weight="1" android:elevation="0dp" android:stateListAnimator="@null"/>
        <Button android:textSize="13sp" android:textColor="@color/mj_color_black" android:id="@+id/right_btn" android:background="@drawable/white_btn_right" android:layout_width="0dp" android:layout_height="45dp" android:text="@string/qrcode_scan" android:layout_weight="1" android:elevation="0dp" android:stateListAnimator="@null"/>
    </LinearLayout>
    <TextView android:textSize="13sp" android:textColor="#ff0099ff" android:gravity="center" android:id="@+id/connect_failed_tips" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:layout_marginRight="26dp" android:layout_marginBottom="26dp" android:layout_above="@+id/common_btn" android:layout_centerHorizontal="true"/>
</RelativeLayout>
