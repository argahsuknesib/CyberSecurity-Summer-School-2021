<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/rlParent" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/title_bar_v3_transparent_white"/>
    <FrameLayout android:id="@+id/video_frame" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/llBottomTools">
        <TextView android:textSize="12dp" android:textColor="@color/mj_color_white" android:gravity="center" android:layout_gravity="center" android:id="@+id/time_container_center" android:background="@drawable/time_shape" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:minWidth="50dp"/>
        <FrameLayout android:layout_gravity="center" android:id="@+id/pause_view" android:background="@drawable/camera_icon_pause_play" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/llRightCtrlContainer" android:background="@drawable/shape_camera_right_ctrl_bg" android:paddingTop="28dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp">
            <TextView android:textSize="10sp" android:textColor="@color/mj_color_white" android:layout_gravity="center" android:id="@+id/tvResolution" android:background="@drawable/shape_camera_sleep_bg" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="17dp" android:text="@string/quality_auto" android:forceDarkAllowed="false"/>
            <TextView android:textSize="10sp" android:textColor="@color/mj_color_white" android:layout_gravity="center" android:id="@+id/tvSleep" android:background="@drawable/shape_camera_sleep_bg" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="14dp" android:text="@string/sleep" android:forceDarkAllowed="false"/>
            <com.xiaomi.smarthome.camera.view.widget.MultiStateView android:layout_gravity="center" android:id="@+id/msvAudio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_icon_audio_off"/>
            <TextView android:layout_gravity="center" android:id="@+id/tvSnapshot" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@null" android:drawableLeft="@drawable/selector_icon_snapshot"/>
            <com.xiaomi.smarthome.camera.view.widget.MultiStateView android:layout_gravity="center" android:id="@+id/msvVideoRecord" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_icon_record"/>
            <TextView android:layout_gravity="center" android:id="@+id/tvFullScreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@null" android:drawableLeft="@drawable/selector_icon_fullscreen" android:forceDarkAllowed="false"/>
            <TextView android:layout_gravity="center" android:id="@+id/tvFloatingWindow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@null" android:drawableLeft="@drawable/selector_icon_floating_window"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/llCall" android:background="@drawable/shape_camera_bottom_gradiant_bg" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.xiaomi.smarthome.camera.view.widget.MultiStateView android:layout_gravity="center" android:id="@+id/msvCall" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:src="@drawable/selector_icon_call"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/llFuncPopup" android:background="@drawable/shape_popup_pic_bg" android:padding="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="6dp">
            <ImageView android:id="@+id/ivShotPic" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <CheckBox android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/cbVoiceLandscape" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_marginBottom="10dp" android:button="@drawable/camera_call_land"/>
        <TextView android:textSize="17dp" android:textColor="#ff5620" android:gravity="center" android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/landRecordTimer" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:minWidth="50dp" android:drawableLeft="@drawable/widget_red_dot" android:drawablePadding="8dp"/>
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="top" android:orientation="horizontal" android:id="@+id/llLandTopCtrlLandscape" android:background="@drawable/shape_camera_top_gradiant_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <TextView android:textSize="10dp" android:textColor="@color/mj_color_white" android:gravity="center" android:id="@+id/tvLandResolution" android:background="@drawable/shape_camera_sleep_bg" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="@string/quality_auto"/>
            <TextView android:textSize="10dp" android:textColor="@color/mj_color_white" android:gravity="center" android:id="@+id/tvLandSleep" android:background="@drawable/shape_camera_sleep_bg" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="@string/sleep"/>
            <com.xiaomi.smarthome.camera.view.widget.MultiStateView android:id="@+id/msvLandAudio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_icon_audio_off"/>
            <ImageView android:id="@+id/ivLandSnapShot" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_icon_snapshot"/>
            <com.xiaomi.smarthome.camera.view.widget.MultiStateView android:id="@+id/msvLandRecord" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_icon_record"/>
            <ImageView android:id="@+id/ivExitFullscreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/selector_icon_exit_fullscreen"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/llBottomTools" android:background="@drawable/shape_camera_bottom_ctrl_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:background="@drawable/shape_camera_bottom_ctrl_bg" android:paddingTop="7dp" android:paddingBottom="9dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="#a6ffffff" android:gravity="center" android:id="@+id/tvCloud" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/item_cloud_video" android:drawableTop="@drawable/selector_icon_cloud" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="#a6ffffff" android:gravity="center" android:id="@+id/tvAlert" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/item_alarm_new" android:drawableTop="@drawable/selector_icon_alert" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="#a6ffffff" android:gravity="center" android:id="@+id/tv_face" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/face_info" android:drawableTop="@drawable/camera_home_face" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="#a6ffffff" android:gravity="center" android:id="@+id/tvPlayback" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/item_storage" android:drawableTop="@drawable/selector_icon_playback" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@+id/fl_cloud_video_tips" android:visibility="gone" android:layout_width="133dp" android:layout_height="35dp" android:layout_marginLeft="20dp" android:layout_marginBottom="-15dp" android:layout_above="@+id/llBottomTools">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/camera_cloud_video_tips_bg"/>
        <TextView android:textSize="@dimen/font_size_10sp" android:textColor="@color/mj_color_white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_cloud_video_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
    </FrameLayout>
</RelativeLayout>
