    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_purchase_vip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="40dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/face_need_open_cloud"/>
        <TextView android:textSize="14sp" android:textColor="#5edbfa" android:id="@+id/tv_purchase" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/face_to_open_cloud" android:layout_marginStart="10dp"/>
    </LinearLayout>
</RelativeLayout>
