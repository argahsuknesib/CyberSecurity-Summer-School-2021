    <TextView android:textSize="15sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/daily_story_tips" android:layout_above="@+id/tv_turn_on_daily_story" android:layout_below="@+id/video_container" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
