        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <com.xiaomi.smarthome.library.common.widget.FixHeightGridView android:gravity="center_horizontal" android:id="@+id/device_list" android:visibility="gone" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:numColumns="3" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
