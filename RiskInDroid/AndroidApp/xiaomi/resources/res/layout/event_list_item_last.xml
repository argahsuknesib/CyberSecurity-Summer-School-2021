<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/view" android:layout_width="match_parent" android:layout_height="10dp"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_below="@+id/view" android:layout_centerHorizontal="true">
        <TextView android:id="@+id/line_left" android:background="#ffe4e4e4" android:layout_width="30dp" android:layout_height="1dp"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/tv_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/to_end" android:layout_centerHorizontal="true"/>
        <TextView android:id="@+id/line_right" android:background="#ffe4e4e4" android:layout_width="30dp" android:layout_height="1dp"/>
    </LinearLayout>
</RelativeLayout>
