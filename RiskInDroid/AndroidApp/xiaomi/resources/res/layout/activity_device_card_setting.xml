            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/std_list_right_icon_padding_left_3" android:layout_marginTop="@dimen/std_paragraph_spacing" android:layout_marginRight="@dimen/std_list_right_icon_padding_left_3"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/page_margin_left" android:layout_marginTop="@dimen/tag_margin_top" android:layout_marginRight="@dimen/page_margin_right" android:text="@string/device_card_shortcut_hint"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
