            <View android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="@dimen/std_list_right_icon_padding_left_3" android:layout_marginRight="@dimen/std_list_right_icon_padding_left_3"/>
