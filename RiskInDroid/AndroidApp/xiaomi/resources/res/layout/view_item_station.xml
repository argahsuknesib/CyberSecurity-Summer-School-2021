<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/patchwall_item" android:paddingTop="@dimen/size_10dp" android:paddingBottom="@dimen/size_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/size_10dp" android:paddingEnd="6dp">
