    <TextView android:textSize="@dimen/text_size_10" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/update_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:layout_below="@+id/music_item_description" android:layout_marginStart="@dimen/size_4dp" android:layout_toEndOf="@+id/last_time"/>
    <TextView android:textSize="@dimen/text_size_10" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/episodes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:layout_below="@+id/music_item_description" android:layout_marginStart="18dp" android:layout_toEndOf="@+id/update_time"/>
</RelativeLayout>
