    <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:id="@+id/item_category" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_alignBaseline="@+id/patchwall_item_author" android:layout_marginStart="6dp" android:layout_toEndOf="@+id/patchwall_item_author"/>
    <TextView android:textSize="@dimen/text_size_10" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:id="@+id/music_item_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size_5dp" android:maxLines="1" android:layout_below="@+id/patchwall_item_author" android:layout_alignStart="@+id/patchwall_item_author"/>
    <ImageView android:id="@+id/last_time" android:background="@drawable/mico_lasttime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_below="@+id/music_item_description" android:layout_alignStart="@+id/music_item_description"/>
