<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/base_background" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/detail_contianer" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@color/base_background" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@drawable/shop_border_confirm_payment_red" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/confirm_payment_innermargin" android:layout_marginTop="@dimen/confirm_payment_innermargin" android:layout_marginRight="@dimen/confirm_payment_innermargin">
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/card_type_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:src="@drawable/shop_card"/>
                    <com.mi.global.shop.widget.CustomTextView android:textColor="@color/light_black" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/card_number_detail" android:layout_width="wrap_content" android:layout_height="@dimen/confirm_payment_textview_height" android:layout_marginLeft="8dp" android:text="512345XXXXXX2346"/>
                    <com.mi.global.shop.widget.CustomTextView android:textColor="@color/light_black" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/card_name_detail" android:layout_width="0dp" android:layout_height="@dimen/confirm_payment_textview_height" android:text="Zhang Shan" android:lines="2" android:layout_weight="1"/>
                    <com.mi.global.shop.widget.CustomTextView android:textColor="@color/light_black" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/card_expire_detail" android:layout_width="0dp" android:layout_height="@dimen/confirm_payment_textview_height" android:layout_marginRight="@dimen/confirm_payment_vertical_spacing" android:text="Expires 02/2019" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/confirm_payment_innermargin" android:layout_marginRight="@dimen/confirm_payment_innermargin">
                    <com.mi.global.shop.widget.CustomEditTextView android:textColor="@color/light_black" android:id="@+id/card_cvv" android:layout_width="0dp" android:layout_height="@dimen/confirm_payment_textview_height" android:layout_marginLeft="8dp" android:hint="CVV" android:layout_weight="6" android:inputType="numberPassword" style="@style/Widget.EditText"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/card_cvv_image" android:layout_width="55dp" android:layout_height="35dp" android:layout_marginLeft="@dimen/confirm_payment_vertical_spacing" android:layout_marginRight="@dimen/confirm_payment_vertical_spacing" android:src="@drawable/shop_cvv123"/>
                </LinearLayout>
                <com.mi.global.shop.widget.CommonButton android:id="@+id/pay_order" android:layout_width="match_parent" android:layout_marginLeft="@dimen/confirm_payment_vertical_spacing" android:layout_marginTop="@dimen/confirm_payment_outermargin" android:layout_marginRight="@dimen/confirm_payment_vertical_spacing" android:layout_marginBottom="@dimen/confirm_payment_outermargin" android:text="Pay your order" style="@style/ProductDetailGotoCartButton"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/buy_confirm_payment_exitsdetail_checked" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/shop_multiple_choice_s"/>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/simple_contianer" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="43dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/card_type" android:layout_width="wrap_content" android:layout_height="@dimen/confirm_payment_textview_height" android:layout_marginLeft="8dp" android:src="@drawable/shop_card"/>
        <com.mi.global.shop.widget.CustomTextView android:textColor="@color/light_black" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/card_number" android:layout_width="wrap_content" android:layout_height="@dimen/confirm_payment_textview_height" android:layout_marginLeft="8dp" android:text="512345XXXXXX2346"/>
        <com.mi.global.shop.widget.CustomTextView android:textColor="@color/light_black" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/card_name" android:layout_width="0dp" android:layout_height="@dimen/confirm_payment_textview_height" android:text="Zhang Shan" android:lines="2" android:layout_weight="1"/>
        <com.mi.global.shop.widget.CustomTextView android:textColor="@color/light_black" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/card_expire" android:layout_width="0dp" android:layout_height="@dimen/confirm_payment_textview_height" android:layout_marginRight="@dimen/confirm_payment_vertical_spacing" android:text="Expires 02/2019" android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
