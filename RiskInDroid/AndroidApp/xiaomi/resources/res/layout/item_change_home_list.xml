<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <View android:id="@+id/top_space" android:visibility="gone" android:layout_width="match_parent" android:layout_height="10dp"/>
    <RelativeLayout android:id="@+id/ll_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/top_space">
        <ImageView android:id="@+id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mj_webp_widget_picker_ok" android:layout_centerVertical="true" android:layout_marginEnd="22dp" android:layout_alignParentEnd="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="27dp" android:layout_toStartOf="@+id/icon" android:layout_alignParentStart="true">
            <com.xiaomi.smarthome.newui.widget.FixedTextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:ellipsize="end" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="13dp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:id="@+id/subtitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/divider_item" android:background="@color/mj_color_separator" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/ll_content" android:layout_marginStart="27dp" android:layout_marginEnd="27dp"/>
</RelativeLayout>
