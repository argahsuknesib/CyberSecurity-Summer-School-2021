<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/mj_rs_common_white_list_padding" android:layout_width="match_parent" android:layout_height="@dimen/std_list_item_height_two_line">
    <FrameLayout android:id="@+id/right_view_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/red_point" android:background="@drawable/dot_red" android:layout_width="@dimen/red_dot_size" android:layout_height="@dimen/red_dot_size" android:importantForAccessibility="no"/>
        <ImageView android:id="@+id/right_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mj_webp_widget_second_arrow_nor" android:importantForAccessibility="no"/>
        <CheckBox android:id="@+id/ckb_edit_selected" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/checkbox_layout"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toStartOf="@+id/right_view_container" android:layout_alignParentStart="true">
        <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/mj_color_black_100_transparent" android:ellipsize="end" android:id="@+id/feedback_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
        <TextView android:textSize="@dimen/std_list_font_size_subtitle" android:textColor="@color/mj_color_gray_normal" android:id="@+id/feedback_desc" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
