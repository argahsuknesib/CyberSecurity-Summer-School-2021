<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="284dp" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="end" android:id="@+id/pop_ad_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/float_close" android:contentDescription="@string/mj_close" android:layout_marginEnd="5dp"/>
        <LinearLayout android:orientation="vertical" android:background="@drawable/ad_pop_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_black" android:ellipsize="end" android:gravity="center" android:id="@+id/title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:singleLine="true"/>
            <ImageView android:id="@+id/pop_ad_pic" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="fitCenter" android:adjustViewBounds="true" android:contentDescription="@null"/>
        </LinearLayout>
        <Button android:textSize="@dimen/font_size_13sp" android:textColor="#00bc9c" android:id="@+id/jump_to_product" android:background="@drawable/ad_pop_button_bg" android:layout_width="match_parent" android:layout_height="41dp" android:layout_marginTop="1dp" android:text="@string/pop_ad_button"/>
    </LinearLayout>
</FrameLayout>
