<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/ll_root" android:layout_width="wrap_content" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:background="@drawable/hot_accessories_corners" android:layout_width="125dp" android:layout_height="match_parent">
        <ImageView android:id="@+id/product_image" android:layout_width="90dp" android:layout_height="90dp" android:layout_marginTop="4dp" android:scaleType="centerCrop" android:layout_marginStart="19dp" android:layout_marginEnd="16dp"/>
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12sp" android:textColor="#ff2e2323" android:ellipsize="end" android:id="@+id/product_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:maxLines="1" android:layout_marginStart="19dp" android:layout_marginEnd="19dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_price" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginStart="19dp">
            <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12sp" android:textColor="#ff6700" android:gravity="center_horizontal" android:id="@+id/tv_price_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12sp" android:textColor="#dddddd" android:gravity="center_horizontal" android:id="@+id/tv_price_origin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/divider" android:layout_width="7dp" android:layout_height="match_parent"/>
    <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="16sp" android:gravity="center" android:id="@+id/tv_more" android:background="@drawable/hot_accessories_corners" android:visibility="gone" android:layout_width="80dp" android:layout_height="match_parent" android:text="More &gt;"/>
</LinearLayout>
