<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:background="#90000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:layout_gravity="center" android:id="@+id/background_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerInside" android:importantForAccessibility="no"/>
        <FrameLayout android:id="@+id/cancel_btn" android:background="#00000000" android:layout_width="60dp" android:layout_height="40dp" android:layout_marginLeft="250dp" android:layout_marginStart="250dp"/>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="25dp">
            <ImageView android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/yp_know_about_benefit" android:contentDescription="@string/see_benefits" android:layout_marginEnd="10dp"/>
            <ImageView android:id="@+id/experience" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/yp_ext_at_once" android:contentDescription="@string/participate_immediate" android:layout_marginStart="10dp"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
