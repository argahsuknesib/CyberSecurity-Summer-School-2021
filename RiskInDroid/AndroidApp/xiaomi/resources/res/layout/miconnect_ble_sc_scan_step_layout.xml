        <ImageView android:id="@+id/btn_back" android:paddingLeft="@dimen/mj_titlebar_margin_left_right" android:paddingRight="@dimen/mj_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mj_common_title_bar_return" android:scaleType="center" android:layout_centerVertical="true" android:contentDescription="@string/action_back"/>
