<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.xiaomi.mico.common.widget.TitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:tb_has_back="true" app:tb_title_color="@color/mj_color_black_100_transparent"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/search_container" android:background="@drawable/mj_color_white" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="44dp">
        <Button android:textSize="14dp" android:textColor="@color/mj_color_gray_normal" android:id="@+id/city" android:background="@color/mj_color_black_00_transparent" android:layout_width="70dp" android:layout_height="match_parent" android:text="@string/city_select_unknown" android:drawablePadding="6dp" android:drawableEnd="@drawable/icon_dropdown_2"/>
        <View android:background="@color/mj_color_separator" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginLeft="11dp"/>
        <EditText android:textSize="14dp" android:textColor="@color/mj_color_black" android:textColorHint="@color/mj_color_black_30_transparent" android:id="@+id/address" android:background="@color/mj_color_black_00_transparent" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="11dp" android:hint="@string/address_default_hint" android:layout_weight="1" android:textCursorDrawable="@drawable/mj_edittext_cursor"/>
    </LinearLayout>
    <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px"/>
    <View android:layout_width="match_parent" android:layout_height="10dp"/>
    <ListView android:id="@+id/listview" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="0dp" android:listSelector="@android:color/transparent" android:divider="@drawable/list_divider_15dp" android:layout_weight="1"/>
</LinearLayout>
