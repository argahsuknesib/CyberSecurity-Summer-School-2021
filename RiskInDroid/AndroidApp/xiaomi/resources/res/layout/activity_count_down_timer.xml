    <include android:layout_width="match_parent" android:layout_height="@dimen/titlebar_height" android:layout_alignParentTop="true" layout="@layout/title_bar_choose_common"/>
    <com.xiaomi.smarthome.library.common.widget.TimePicker android:id="@+id/tp_timer" android:layout_width="300dp" android:layout_height="257dp" android:layout_below="@+id/title_bar" android:layout_centerHorizontal="true"/>
