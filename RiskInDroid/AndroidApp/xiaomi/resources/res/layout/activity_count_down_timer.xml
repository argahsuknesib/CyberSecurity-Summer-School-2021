<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root_container" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
