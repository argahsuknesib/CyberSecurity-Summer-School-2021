<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/pull_header_container" android:layout_width="wrap_content" android:layout_height="60dp">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="@dimen/pull_down_header_height">
        <ProgressBar android:layout_gravity="center_vertical" android:id="@+id/pull_header_prog" android:layout_width="20dp" android:layout_height="20dp" android:indeterminate="true" style="@style/circle_progressbar_large"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/pull_header_indc" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/common_refresh_arrow" android:scaleType="fitCenter"/>
    </FrameLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="@dimen/pull_down_header_height" android:layout_marginLeft="10dp" android:layout_marginStart="10dp">
        <TextView android:textSize="13dp" android:textColor="@color/mj_color_black_60_transparent" android:id="@+id/pull_header_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pull_down_refresh"/>
        <TextView android:textSize="14dp" android:textColor="@color/mj_color_black" android:id="@+id/pull_header_txt_line2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
