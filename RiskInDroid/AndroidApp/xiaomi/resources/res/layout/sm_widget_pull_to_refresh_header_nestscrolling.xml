<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@null" android:layout_width="match_parent" android:layout_height="65dp">
    <TextView android:textColor="#fff" android:id="@+id/text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    <View android:id="@+id/successIcon" android:background="@drawable/mj_webp_widget_second_arrow_nor" android:visibility="invisible" android:layout_width="13dp" android:layout_height="13dp" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/text" android:layout_centerInParent="true" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/text"/>
    <ImageView android:id="@+id/arrowIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:src="@drawable/progressbar_indeterminate_circle_light" android:scaleType="fitCenter" android:layout_centerInParent="true" android:layout_marginStart="40dp"/>
    <ImageView android:id="@+id/loadingIcon" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:src="@drawable/progressbar_indeterminate_circle_light" android:scaleType="fitCenter" android:layout_centerInParent="true" android:layout_centerVertical="true" android:layout_marginStart="40dp"/>
</RelativeLayout>
