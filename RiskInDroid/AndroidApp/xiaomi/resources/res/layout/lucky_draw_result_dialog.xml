<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/container" android:background="@drawable/bg_lucky_draw_dialog" android:layout_width="236dp" android:layout_height="239dp" android:layout_marginTop="40dp" android:layout_centerHorizontal="true">
        <TextView android:textSize="14dp" android:textColor="#ff736f65" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/text_title_lucky_no" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="33dp" android:layout_marginTop="29dp" android:layout_marginRight="33dp" android:text="很遗憾\10奖品与你擦肩而过" android:lineSpacingExtra="3dp"/>
        <TextView android:textSize="13dp" android:textColor="#fff1543e" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/text_title_lucky_yes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="33dp" android:layout_marginTop="29dp" android:layout_marginRight="33dp" android:text="恭喜你获得" android:lineSpacingExtra="3dp"/>
        <TextView android:textSize="15dp" android:textColor="#fff35140" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/text_title_lucky_goods" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="33dp" android:layout_marginTop="6dp" android:layout_marginRight="33dp" android:maxLines="2" android:lineSpacingExtra="3dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/icon_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginRight="15dp" android:src="@drawable/icon_lucky_draw_close" android:adjustViewBounds="true" android:layout_alignRight="@+id/container"/>
    <TextView android:textSize="12dp" android:textColor="#ffe64d42" android:gravity="center" android:id="@+id/btn_action" android:background="@drawable/bg_lucky_draw_dialog_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="再试试手气" android:layout_below="@+id/container" android:layout_centerHorizontal="true"/>
</RelativeLayout>
