<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/camera_title_bar"/>
    <TextView android:textSize="@dimen/font_size_12sp" android:textColor="#527acc" android:id="@+id/nothing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="19dp" android:text="@string/nothing" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <Button android:textSize="@dimen/font_size_14sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/refresh" android:background="@drawable/camera_refresh_bg" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="17dp" android:layout_marginRight="17dp" android:layout_marginBottom="19dp" android:text="@string/refresh" android:layout_above="@+id/nothing" android:layout_marginStart="17dp" android:layout_marginEnd="17dp"/>
    <TextView android:textSize="@dimen/font_size_1" android:textColor="#000000" android:gravity="center" android:id="@+id/top_title" android:background="#ffffff" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/camera_step3_desc2" android:layout_below="@+id/title_bar" android:layout_centerInParent="true"/>
    <ListView android:id="@+id/listview" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/refresh" android:layout_below="@+id/top_title"/>
    <ProgressBar android:id="@+id/pbar" android:layout_width="wrap_content" android:layout_height="44dp" android:layout_marginBottom="19dp" android:layout_above="@+id/nothing" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
</RelativeLayout>
