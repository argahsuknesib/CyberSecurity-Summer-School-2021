<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/rlTitleBar" layout="@layout/cs_view_cloud_video_header"/>
    <RelativeLayout android:id="@+id/rl_cloud_video" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlTitleBar">
        <ImageView android:id="@+id/iv_crown" android:layout_width="49dp" android:layout_height="49dp" android:layout_marginLeft="21dp" android:layout_marginTop="22dp" android:src="@drawable/icon_cloud_video_crown"/>
        <TextView android:textSize="15sp" android:textColor="@color/mj_color_black" android:id="@+id/tv_order_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="27dp" android:layout_toLeftOf="@+id/tv_manage" android:layout_toRightOf="@+id/iv_crown"/>
        <TextView android:textSize="11sp" android:textColor="@color/mj_color_possible_result_points" android:id="@+id/tv_interval" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:layout_toRightOf="@+id/iv_crown" android:layout_below="@+id/tv_order_name"/>
        <TextView android:textSize="11sp" android:textColor="@color/mj_color_possible_result_points" android:id="@+id/tv_capacity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_toRightOf="@+id/tv_interval" android:layout_below="@+id/tv_order_name"/>
        <TextView android:textSize="11sp" android:textColor="#999999" android:id="@+id/tv_validity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="27dp" android:layout_toRightOf="@+id/iv_crown" android:layout_below="@+id/tv_interval"/>
        <TextView android:textSize="12sp" android:textColor="@color/mj_color_white" android:gravity="center" android:id="@+id/tv_manage" android:background="@drawable/cloud_video_manage_btn_bg" android:layout_width="68dp" android:layout_height="27dp" android:layout_marginTop="32dp" android:layout_marginRight="24dp" android:text="@string/cs_vip_management" android:layout_alignParentRight="true"/>
        <View android:id="@+id/cloud_video_divider" android:background="@color/mj_color_black_05_transparent" android:layout_width="match_parent" android:layout_height="10dp" android:layout_below="@+id/tv_validity"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_cloud_video">
        <com.xiaomi.smarthome.miio.camera.cloudstorage.CloudVideoDateListView android:id="@+id/cvdlvDays" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <View android:id="@+id/viewDivider" android:background="@color/mj_color_white_10_transparent" android:layout_width="match_parent" android:layout_height="0.2dp" android:layout_marginTop="6dp" android:layout_below="@+id/cvdlvDays"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/llBottomCtrl" android:paddingTop="5dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
            <TextView android:gravity="center" android:id="@+id/tvDownload" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:text="@string/cs_download" android:drawableTop="@drawable/camera_icon_save"/>
            <TextView android:gravity="center" android:id="@+id/tvDelete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/delete" android:drawableTop="@drawable/camera_icon_delete"/>
        </LinearLayout>
        <com.xiaomi.smarthome.miio.camera.cloudstorage.views.RecyclerViewRefreshLayoutEx android:id="@+id/rvrlVideoList" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="6dp" android:layout_marginTop="6dp" android:layout_marginRight="6dp" android:layout_above="@+id/llBottomCtrl" android:layout_below="@+id/viewDivider">
            <com.xiaomi.smarthome.miio.camera.cloudstorage.CloudVideoListView android:id="@+id/cvlvVideos" android:layout_width="match_parent" android:layout_height="wrap_content" android:overScrollMode="never"/>
        </com.xiaomi.smarthome.miio.camera.cloudstorage.views.RecyclerViewRefreshLayoutEx>
    </RelativeLayout>
    <ImageView android:id="@+id/ivLoading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/camera_loading" android:layout_centerInParent="true"/>
    <TextView android:textColor="@color/mj_color_black" android:id="@+id/tvBlankHint" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cs_no_video_today" android:layout_centerInParent="true"/>
    <TextView android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/tvDownloadHint" android:background="@color/mj_color_class_H" android:paddingTop="8dp" android:paddingBottom="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/cs_download_hint" android:layout_alignParentBottom="true"/>
</RelativeLayout>
