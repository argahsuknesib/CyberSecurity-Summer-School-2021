<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.smarthome.library.common.widget.ListItemView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:background="@drawable/selector_list_item" android:layout_width="match_parent" android:layout_height="60dp">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="7dp" android:layout_marginEnd="67dp" android:layout_toEndOf="@+id/icon_group">
        <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/mj_color_gray_heavier" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_above="@+id/center_view"/>
        <View android:id="@+id/center_view" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/center_view" android:layout_marginEnd="7dp"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/desc_tips" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/center_view" android:layout_toEndOf="@+id/desc"/>
    </RelativeLayout>
    <CheckBox android:id="@+id/checkbox" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:button="@drawable/checkbox_selector" android:text="@null" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="24dp" android:layout_alignParentEnd="true"/>
    <ImageView android:id="@+id/iv_right" android:background="@drawable/icon_checkbox_offline_v2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@null" android:layout_centerVertical="true" android:contentDescription="@string/offline_device" android:layout_marginEnd="24dp" android:layout_alignParentEnd="true"/>
    <View android:id="@+id/divider_item" android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24dp" android:layout_alignParentBottom="true" android:layout_marginStart="24dp"/>
    <FrameLayout android:id="@+id/icon_group" android:layout_width="46dp" android:layout_height="46dp" android:layout_marginLeft="20dp" android:layout_centerVertical="true" android:layout_marginStart="20dp">
        <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center" android:id="@+id/icon" android:layout_width="38dp" android:layout_height="38dp" android:importantForAccessibility="no"/>
        <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/offline" android:background="@drawable/icon_checkbox_offline" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/offline_device"/>
    </FrameLayout>
</com.xiaomi.smarthome.library.common.widget.ListItemView>
