<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/panic_buy_tab_view_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.xiaomi.shopviews.widget.homepanicbuyview.HomePanicBuyTabView2 android:id="@+id/panic_buy_tab_view" android:visibility="gone" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RelativeLayout android:gravity="top" android:layout_gravity="top" android:id="@+id/single_tab_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/single_title_img" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/padding16" android:adjustViewBounds="true"/>
            <com.xiaomi.shopviews.widget.homepanicbuyview.FlashTimerView android:id="@+id/single_count_down_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding8" android:layout_toRightOf="@+id/single_title_img" android:layout_centerVertical="true"/>
            <View android:background="@color/bg_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <com.xiaomi.shopviews.widget.hdhorizontalrecyclergoods.CustRecylerView android:id="@+id/recycler_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
