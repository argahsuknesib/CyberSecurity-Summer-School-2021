<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/text_view_snooze_header" layout="@layout/dialog_ui_header"/>
    <LinearLayout android:orientation="vertical" android:paddingBottom="25dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="24dp" android:layout_marginRight="24dp">
        <TextView android:textSize="12sp" android:id="@+id/text_view_snooze_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:text="@string/cb_slownetwork_status" android:lineSpacingExtra="10sp" android:fontFamily="Roboto-Regular"/>
        <TextView android:textSize="12sp" android:textStyle="bold" android:id="@+id/text_view_transaction_snoozed_message1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="Please do not kill the app" android:lineSpacingExtra="10sp"/>
        <Button android:textColor="#00adf2" android:id="@+id/button_retry_anyway" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/cb_snooze_retry_anyway"/>
        <com.payu.custombrowser.widgets.SnoozeLoaderView android:layout_gravity="center" android:id="@+id/snooze_loader_view" android:padding="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:activeBarColor="#00adf2" app:animationSpeed="200" app:barHeight="60px" app:barSpace="20px" app:barWidth="20px" app:inActiveBarColor="#b0eafc"/>
        <Button android:textColor="@android:color/white" android:id="@+id/button_snooze_transaction" android:background="#00adf2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/cb_snooze_try_later"/>
        <TextView android:textSize="12sp" android:id="@+id/text_view_retry_message_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/cb_retry_restart" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif-regular"/>
        <TextView android:textSize="10sp" android:textColor="#9b9b9b" android:id="@+id/text_view_ac_debited_twice" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/cb_ac_debited_twice" android:lineSpacingExtra="24sp" android:fontFamily="Roboto-Regular"/>
        <Button android:textColor="#00adf2" android:id="@+id/button_retry_transaction" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="RETRY NOW"/>
        <TextView android:textSize="10sp" android:textColor="#00adf2" android:layout_gravity="center" android:id="@+id/button_cancel_transaction" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="14dp" android:text="Cancel Transaction" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif-medium"/>
        <Button android:textSize="15dp" android:textColor="@android:color/white" android:id="@+id/t_confirm" android:background="#00adf2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_marginBottom="10dp" android:text="Yes, I received a message" android:textAlignment="center"/>
        <Button android:textSize="15dp" android:textColor="#00adf2" android:id="@+id/t_nconfirm" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="No, I did not" android:textAlignment="center"/>
        <Button android:textColor="@android:color/white" android:id="@+id/button_go_back_snooze" android:background="#00adf2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Go Back"/>
    </LinearLayout>
</LinearLayout>
