<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.mico.music.player.PlayerControler xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/music_control_view" android:background="@color/mj_color_white" android:clickable="true" android:layout_width="match_parent" android:layout_height="60dp">
    <View android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentTop="true"/>
    <ImageView android:id="@+id/player_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/player_cover" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginLeft="15dp" android:layout_centerVertical="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/player_list" android:layout_toRightOf="@+id/player_cover" android:layout_centerVertical="true">
        <TextView android:textSize="@dimen/prompt_text_size" android:textStyle="bold" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:id="@+id/player_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="" android:maxLines="1"/>
        <TextView android:textSize="@dimen/minimal_text_size" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:id="@+id/player_cp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="1dp" android:layout_marginRight="5dp" android:text="" android:maxLines="1" android:layout_below="@+id/player_name"/>
    </LinearLayout>
    <ImageView android:id="@+id/player_state" android:background="@drawable/mico_icon_playcontroler_play_selector" android:layout_width="34dp" android:layout_height="34dp" android:layout_marginRight="19dp" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <ProgressBar android:id="@+id/player_progress" android:layout_width="34dp" android:layout_height="34dp" android:layout_marginRight="19dp" android:progressDrawable="@drawable/mico_progress_bar_player_controler" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="?android:attr/progressBarStyleHorizontal"/>
    <ImageView android:id="@+id/player_list" android:background="@drawable/mico_icon_classification_selector" android:layout_width="34dp" android:layout_height="34dp" android:layout_marginRight="19dp" android:layout_toLeftOf="@+id/player_state" android:layout_centerVertical="true"/>
    <View android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
</com.xiaomi.mico.music.player.PlayerControler>
