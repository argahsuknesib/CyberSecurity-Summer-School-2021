<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="15dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/footer_user_agreement" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/passport_page_footer_padding_horizontal" android:paddingEnd="@dimen/passport_page_footer_padding_horizontal">
        <CheckBox android:id="@+id/footer_user_agreement_checkbox" android:layout_centerVertical="true" style="@style/Passport.CheckBox"/>
        <TextView android:textSize="@dimen/passport_common_text_size" android:textColor="@color/passport_user_agreement_text" android:textColorHighlight="@android:color/transparent" android:gravity="start" android:id="@+id/footer_user_agreement_hint" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/user_agreement_hint_with_mobile" android:layout_centerVertical="true" android:layout_marginStart="@dimen/passport_account_login_margin_small" android:layout_toEndOf="@+id/footer_user_agreement_checkbox"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/footer_sns_list_container" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/footer_user_agreement">
        <RelativeLayout android:id="@+id/sns_list_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/passport_account_login_margin_big" android:layout_marginBottom="20dp" android:layoutDirection="locale">
            <TextView android:textSize="@dimen/passport_common_text_size" android:textColor="@color/passport_sns_login_title_text" android:gravity="center" android:id="@+id/tv_other_login_way" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/login_with_sns" android:layout_centerHorizontal="true"/>
            <View android:background="@color/passport_sns_login_title_divider" android:layout_width="match_parent" android:layout_height="@dimen/passport_sns_login_divider_height" android:layout_centerVertical="true" android:layout_marginStart="@dimen/passport_page_footer_padding_horizontal" android:layout_marginEnd="@dimen/passport_sns_login_title_margin" android:layout_toStartOf="@+id/tv_other_login_way" android:layout_alignParentStart="true"/>
            <View android:background="@color/passport_sns_login_title_divider" android:layout_width="match_parent" android:layout_height="@dimen/passport_sns_login_divider_height" android:layout_centerVertical="true" android:layout_marginStart="@dimen/passport_sns_login_title_margin" android:layout_marginEnd="@dimen/passport_page_footer_padding_horizontal" android:layout_toEndOf="@+id/tv_other_login_way" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/sns_list_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/passport_sns_login_padding_horizontal" android:paddingEnd="@dimen/passport_sns_login_padding_horizontal">
            <ImageView android:id="@+id/footer_sns_facebook" android:layout_width="match_parent" android:layout_height="@dimen/passport_sns_login_icon_size" android:src="@drawable/passport_ic_sns_facebook" android:scaleType="fitCenter" android:layout_weight="1"/>
            <ImageView android:id="@+id/footer_sns_google" android:layout_width="match_parent" android:layout_height="@dimen/passport_sns_login_icon_size" android:src="@drawable/passport_ic_sns_google" android:scaleType="fitCenter" android:layout_weight="1"/>
            <ImageView android:id="@+id/footer_sns_weibo" android:layout_width="match_parent" android:layout_height="@dimen/passport_sns_login_icon_size" android:src="@drawable/passport_ic_sns_weibo" android:scaleType="fitCenter" android:layout_weight="1"/>
            <ImageView android:id="@+id/footer_sns_qq" android:layout_width="match_parent" android:layout_height="@dimen/passport_sns_login_icon_size" android:src="@drawable/passport_ic_sns_qq" android:scaleType="fitCenter" android:layout_weight="1"/>
            <ImageView android:id="@+id/footer_sns_wechat" android:layout_width="match_parent" android:layout_height="@dimen/passport_sns_login_icon_size" android:src="@drawable/passport_ic_sns_wechat" android:scaleType="fitCenter" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
