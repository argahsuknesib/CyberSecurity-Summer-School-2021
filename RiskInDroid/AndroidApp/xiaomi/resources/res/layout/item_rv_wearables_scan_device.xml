        <TextView android:textSize="11sp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="middle" android:id="@+id/item_tv_room" android:layout_width="0dp" android:layout_height="wrap_content" android:text="客厅" android:singleLine="true" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
