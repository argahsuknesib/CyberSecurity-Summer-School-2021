<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/item_layout" android:background="@drawable/wearables_list_item_frame" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
