<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/common_timer_list_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
    <TextView android:textSize="15sp" android:textColor="@color/mj_color_black" android:ellipsize="end" android:id="@+id/tv_on_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:singleLine="true" android:layout_alignParentLeft="true" android:layout_marginStart="24dp"/>
    <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:id="@+id/tv_on" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="@string/plug_timer_on_time" android:layout_below="@+id/tv_on_time" android:layout_alignParentLeft="true" android:layout_marginStart="24dp"/>
    <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:gravity="start" android:id="@+id/tv_repeat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/plug_timer_onetime" android:maxLines="2" android:layout_alignTop="@+id/tv_on" android:paddingEnd="4dp" android:layout_toStartOf="@+id/right_btn_container" android:layout_toEndOf="@+id/tv_on"/>
    <FrameLayout android:id="@+id/right_btn_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="24dp">
        <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/sb_timer" android:focusable="false" android:layout_width="wrap_content" android:layout_height="24dp"/>
        <CheckBox android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/ckb_edit_selected" android:focusable="false" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/list_icon_selector"/>
        <ImageView android:id="@+id/err_btn" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/exclamation_mark"/>
        <ImageView android:id="@+id/group_indicator" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/std_list_main_next"/>
    </FrameLayout>
    <View android:id="@+id/divider" android:background="@color/mj_color_black_15_transparent" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true" android:layout_marginStart="24dp"/>
</RelativeLayout>
