<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:layout_gravity="center" android:background="@drawable/miband_step_circle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.xiaomi.smarthome.miio.miband.widget.SimpleCircleProgressView android:layout_gravity="center" android:id="@+id/scp_progress_view" android:layout_width="220dp" android:layout_height="220dp"/>
        <ImageView android:layout_gravity="center" android:background="@drawable/miband_main_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="#afffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/today_all_steps"/>
            <TextView android:textSize="50sp" android:textColor="#ffffffff" android:id="@+id/sport_step" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="0"/>
            <TextView android:textSize="14sp" android:textColor="#afffffff" android:id="@+id/sport_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/today_kilometers"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
