<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/bg_gray" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_delivery_select" android:background="@android:color/white" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <com.mi.global.shop.widget.CustomTextView android:textSize="13sp" android:textColor="#2e2323" android:gravity="center_vertical" android:id="@+id/tv_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="16dp" android:text="Delivery Method"/>
        <com.mi.global.shop.widget.CustomTextView android:textSize="13sp" android:textColor="@color/delivery_selected" android:gravity="center_vertical" android:id="@+id/delivery_home" android:background="@drawable/shop_bg_tv_selector" android:paddingLeft="13dp" android:paddingTop="7dp" android:paddingRight="13dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:text="Home Delivery" android:layout_below="@+id/tv_top"/>
        <com.mi.global.shop.widget.CustomTextView android:textSize="13sp" android:textColor="@color/delivery_unselected" android:gravity="center_vertical" android:id="@+id/delivery_smart" android:background="@drawable/shop_bg_tv_unselector" android:paddingLeft="13dp" android:paddingTop="7dp" android:paddingRight="13dp" android:paddingBottom="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Smartbox" android:layout_toRightOf="@+id/delivery_home" android:layout_alignTop="@+id/delivery_home"/>
        <RelativeLayout android:id="@+id/rl_four_delivery" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/delivery_home">
            <RelativeLayout android:id="@+id/ll_delivery_notice" android:layout_width="match_parent" android:layout_height="54dp">
                <com.mi.global.shop.widget.CustomTextView android:textSize="13sp" android:textColor="#2e2323" android:id="@+id/express_delivery" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="23dp" android:text="Express delivery service"/>
                <ImageView android:id="@+id/four_hour_delivery_v" android:paddingTop="10dp" android:paddingRight="11dp" android:paddingBottom="4dp" android:layout_width="25dp" android:layout_height="28dp" android:layout_marginLeft="4.5dp" android:layout_marginTop="14dp" android:src="@drawable/shop_question_mark_delivery" android:scaleType="fitCenter" android:layout_toRightOf="@+id/express_delivery"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/delivery_notice" android:background="@drawable/shop_bg_tv_unselector" android:paddingLeft="13dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/ll_delivery_notice">
                <com.mi.global.shop.widget.CustomTextView android:textSize="13sp" android:textColor="#2e2323" android:gravity="center" android:id="@+id/delivery_four_hour" android:focusable="true" android:layout_width="wrap_content" android:layout_height="match_parent"/>
                <com.mi.global.shop.widget.CustomTextView android:textSize="13sp" android:textColor="#ff9e0d" android:gravity="center" android:id="@+id/four_hour_price" android:focusable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:layout_toRightOf="@+id/delivery_four_hour"/>
                <CheckBox android:textSize="12sp" android:textColor="#ff6700" android:gravity="center_vertical" android:id="@+id/four_hour_delivery_ck" android:layout_width="wrap_content" android:layout_height="50dp" android:checked="false" android:button="@drawable/shop_checkbox_choice" android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_smart_box" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/delivery_home">
            <RelativeLayout android:id="@+id/ll_smart_notice" android:layout_width="match_parent" android:layout_height="54dp">
                <com.mi.global.shop.widget.CustomTextView android:textSize="12sp" android:textColor="#888888" android:gravity="center_vertical" android:id="@+id/tv_delivery_location_notice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="23dp" android:text="Please select a delivery location"/>
                <com.mi.global.shop.widget.CustomTextView android:textSize="12sp" android:textColor="#298cda" android:gravity="center_vertical" android:id="@+id/tv_smart_explain" android:paddingBottom="10dp" android:focusable="true" android:layout_width="wrap_content" android:layout_height="22dp" android:layout_marginRight="15dp" android:text="How to use?" android:layout_alignTop="@+id/tv_delivery_location_notice" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <com.mi.global.shop.widget.PopSpinnerView android:id="@+id/psv_smart" android:background="@drawable/shop_bg_tv_unselector" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/ll_smart_notice"/>
            <com.mi.global.shop.widget.CustomTextView android:textSize="12sp" android:textColor="#888888" android:id="@+id/tv_smart_box_conditions" android:background="#f9f9fa" android:paddingLeft="10dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:text="@string/smart_box_terms_conditions" android:layout_below="@+id/psv_smart"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/v_divider" android:background="@drawable/shop_shadow_layer_bottom" android:layout_width="match_parent" android:layout_height="2dp" android:layout_below="@+id/rl_delivery_select"/>
    <com.mi.global.shop.widget.CustomTextView android:textSize="13sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btn_confirm" android:background="#ff6700" android:layout_width="match_parent" android:layout_height="40dp" android:layout_margin="15dp" android:text="CONFIRM" android:layout_below="@+id/v_divider"/>
</RelativeLayout>
