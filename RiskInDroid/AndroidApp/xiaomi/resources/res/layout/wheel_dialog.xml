<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="23dp" android:layout_marginBottom="23dp">
            <com.xiaomi.smarthome.library.common.wheel.WheelView android:id="@+id/year" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
            <View android:background="@color/mj_color_gray_lighter" android:layout_width="0.33dp" android:layout_height="match_parent"/>
            <com.xiaomi.smarthome.library.common.wheel.WheelView android:id="@+id/month" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
            <View android:background="@color/mj_color_gray_lighter" android:layout_width="0.33dp" android:layout_height="match_parent"/>
            <com.xiaomi.smarthome.library.common.wheel.WheelView android:id="@+id/day" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/buttonPanel" android:paddingLeft="@dimen/alertdialog_button_panel_padding_horizontal" android:paddingRight="@dimen/alertdialog_button_panel_padding_horizontal" android:paddingBottom="@dimen/alertdialog_button_panel_padding_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/alertdialog_button_panel_padding_horizontal" android:paddingEnd="@dimen/alertdialog_button_panel_padding_horizontal">
        <Button android:textSize="@dimen/font_size_13sp" android:textColor="@color/common_button" android:gravity="center" android:id="@+id/button2" android:background="@drawable/common_btn_left" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/sh_common_cancel" android:singleLine="true" android:layout_weight="1"/>
        <Button android:textSize="@dimen/font_size_13sp" android:textColor="@color/common_button" android:gravity="center" android:id="@+id/button1" android:background="@drawable/common_btn_right" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ok_button" android:singleLine="true" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
