<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/root_view" android:background="#fff5f5f5" android:layout_width="match_parent" android:layout_height="123dp">
    <ImageView android:id="@+id/bg_image" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/t14" android:textColor="@color/white" android:id="@+id/text_title_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
            <TextView android:textSize="@dimen/t14" android:textColor="#ffe55c53" android:id="@+id/text_title_count" android:background="@drawable/bg_lucky_draw_count" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:text="12"/>
            <TextView android:textSize="@dimen/t14" android:textColor="@color/white" android:id="@+id/text_title_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
        </LinearLayout>
        <Button android:enabled="false" android:layout_gravity="center_horizontal" android:id="@+id/btn_lucky" android:background="@drawable/bg_lucky_draw_btn" android:layout_width="134dp" android:layout_height="37dp" android:layout_marginTop="12dp" android:text="立即抽奖"/>
        <TextView android:textSize="@dimen/t12" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/btn_jump_coupon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:text="我的奖品&gt;"/>
    </LinearLayout>
</RelativeLayout>
