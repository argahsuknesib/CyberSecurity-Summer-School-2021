<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/img_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/thumb" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="62dp" android:src="@drawable/camera_remind_load_fail" android:scaleType="centerCrop"/>
        <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/checkbox" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:layout_marginBottom="3dp" android:button="@drawable/camera_delete_checked"/>
    </FrameLayout>
    <TextView android:textSize="12sp" android:textColor="#cc000000" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_below="@+id/img_layout"/>
</RelativeLayout>
