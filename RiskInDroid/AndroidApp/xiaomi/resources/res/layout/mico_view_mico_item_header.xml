<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/mico_header_item" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="53dp">
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/mico_pop_close" android:layout_centerVertical="true">
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/mico_header_sound" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginStart="27dp" android:layout_marginEnd="10dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/mj_color_black" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/mico_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="小米小爱音箱mini" android:singleLine="true"/>
            <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/room_name_off" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="客厅" android:singleLine="true" android:layout_marginStart="3dp"/>
            <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/room_name_on" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-客厅" android:singleLine="true" android:layout_marginStart="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/mico_pop_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mico_icon_pop_cancle" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="30dp"/>
    <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
