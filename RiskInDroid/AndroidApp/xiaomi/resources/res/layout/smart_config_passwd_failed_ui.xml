<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/mj_module_a_3_title_bar_return"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_bar">
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/device_image" android:layout_width="match_parent" android:layout_height="280dp" android:scaleType="fitCenter" android:contentDescription="@null"/>
        <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_black_80_transparent" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="90dp" android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/button1" android:background="@drawable/choose_device_list_item_bg" android:layout_width="match_parent" android:layout_height="52dp">
            <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentTop="true"/>
            <TextView android:textSize="14.7sp" android:textColor="@color/mj_color_black_100_transparent" android:gravity="center_vertical" android:id="@+id/button1_name" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="24dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginStart="24dp" android:layout_alignParentStart="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:src="@drawable/right_arrow_white" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:importantForAccessibility="no" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/button2" android:background="@drawable/choose_device_list_item_bg" android:layout_width="match_parent" android:layout_height="52dp">
            <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24dp" android:layout_alignParentTop="true" android:layout_marginStart="24dp"/>
            <TextView android:textSize="14.6sp" android:textColor="@color/mj_color_black_100_transparent" android:id="@+id/button2_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_centerVertical="true" android:layout_marginStart="24dp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:src="@drawable/right_arrow_white" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:importantForAccessibility="no" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/button3" android:background="@drawable/choose_device_list_item_bg" android:layout_width="match_parent" android:layout_height="52dp">
            <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24dp" android:layout_alignParentTop="true" android:layout_marginStart="24dp"/>
            <TextView android:textSize="14.6sp" android:textColor="@color/mj_color_black_100_transparent" android:id="@+id/button3_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_centerVertical="true" android:layout_marginStart="24dp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:src="@drawable/right_arrow_white" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:importantForAccessibility="no" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
            <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
