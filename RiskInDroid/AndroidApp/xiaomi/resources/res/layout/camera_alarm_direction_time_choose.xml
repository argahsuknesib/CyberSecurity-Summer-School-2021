<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/number_picker_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp">
        <TextView android:textColor="#999999" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/start_time" android:layout_weight="1"/>
        <TextView android:textColor="#999999" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/end_time" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_below="@+id/number_picker_title">
        <com.xiaomi.smarthome.camera.view.widget.HourNumberPicker android:id="@+id/number_picker_hour_begin" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_weight="1"/>
        <com.xiaomi.smarthome.camera.view.widget.HourNumberPicker android:id="@+id/number_picker_hour_end" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
