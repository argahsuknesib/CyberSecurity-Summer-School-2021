            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_content_color" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/pay_vertical_padding_height" android:layout_marginBottom="@dimen/pay_vertical_padding_height" android:text="@string/buy_confirm_order_delivery"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_16" android:textColor="@color/pay_title_color" android:gravity="left" android:id="@+id/orderdetail_confirm_consignee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="name"/>
