        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/buy_confirm_promotelayout" android:paddingTop="@dimen/pay_vertical_padding_height" android:paddingRight="@dimen/confirm_payment_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
