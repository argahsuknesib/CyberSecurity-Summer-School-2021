    <LinearLayout android:orientation="horizontal" android:background="@color/pay_title_orange_color" android:paddingLeft="@dimen/confirm_payment_padding" android:paddingTop="15dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
