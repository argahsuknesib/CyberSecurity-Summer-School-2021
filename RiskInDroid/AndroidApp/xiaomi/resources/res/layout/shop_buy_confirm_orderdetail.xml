                <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_14" android:textColor="@color/pay_title_color" android:gravity="left" android:id="@+id/orderdetail_confirm_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="123456"/>
            </LinearLayout>
            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_14" android:textColor="@color/pay_second_title_color" android:gravity="left" android:id="@+id/orderdetail_confirm_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/pay_vertical_padding_height" android:text="XX Street"/>
