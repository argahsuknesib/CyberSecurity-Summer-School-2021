        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:paddingTop="@dimen/pay_vertical_padding_height" android:paddingRight="@dimen/confirm_payment_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_content_color" android:gravity="left" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/buy_confirm_order_shipping" android:layout_weight="4"/>
            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_content_color" android:gravity="center" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/buy_confirm_order_currency" android:layout_weight="0.5"/>
            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_content_color" android:gravity="right" android:id="@+id/orderdetail_confirm_shipping" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_exchange_coupon_container" android:paddingTop="@dimen/pay_vertical_padding_height" android:paddingRight="@dimen/confirm_payment_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_content_color" android:gravity="left" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/buy_confirm_order_exchange_coupon" android:layout_weight="4"/>
            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_content_color" android:gravity="center" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/buy_confirm_order_currency" android:layout_weight="0.5"/>
            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_content_color" android:gravity="right" android:id="@+id/orderdetail_confirm_exchange_coupon" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:layout_weight="1"/>
