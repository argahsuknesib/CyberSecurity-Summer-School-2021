        <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_14" android:textColor="@color/white" android:id="@+id/confirm_ttl_pre_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/confirm_ttl_hint"/>
        <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_14" android:textColor="@color/white" android:id="@+id/confirm_ttl_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
        <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_14" android:gravity="left" android:id="@+id/confirm_ttl_after_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="."/>
