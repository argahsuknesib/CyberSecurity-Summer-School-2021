    <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/hint_color" android:gravity="left" android:background="@color/pay_title_orange_color" android:paddingLeft="44dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/confirm_ttl__cancel_hint"/>
