    <include android:id="@+id/promotion_bottom_divider" layout="@layout/shop_top_shadow_divider"/>
    <ImageView android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:src="@drawable/shop_pay_bottom_wave" android:scaleType="fitXY"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/paymentchoose_fragment_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_content_color" android:gravity="center_vertical" android:background="@color/white" android:paddingLeft="@dimen/confirm_payment_outermargin" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/buy_confirm_PaymentTip"/>
