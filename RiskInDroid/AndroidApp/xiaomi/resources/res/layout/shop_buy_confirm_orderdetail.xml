            <com.mi.global.shop.widget.CustomTextView android:textSize="@dimen/text_size_dp_12" android:textColor="@color/pay_title_color" android:gravity="left" android:id="@+id/orderdetail_confirm_orderid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="123" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@color/bg_gray" android:layout_width="match_parent" android:layout_height="@dimen/divide_line_height"/>
