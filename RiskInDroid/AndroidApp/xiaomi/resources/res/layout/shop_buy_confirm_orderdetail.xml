<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/orderdetail_fragment_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include layout="@layout/shop_notice_layout"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/orderdetail_tip_payfail" android:background="#ffe53935" android:padding="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="80dp">
