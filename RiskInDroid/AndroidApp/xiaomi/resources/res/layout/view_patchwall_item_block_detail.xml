<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/patchwall_item" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/patchwall_item_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/icon_qq_item_mask" android:scaleType="fitXY"/>
        <TextView android:textSize="@dimen/mj_text_size_9" android:textColor="@color/mj_color_white" android:gravity="center" android:id="@+id/patchwall_item_play_count" android:layout_width="wrap_content" android:layout_height="40dp" android:drawableLeft="@drawable/icon_play_count" android:drawablePadding="2dp" android:layout_alignParentBottom="true" android:layout_marginStart="6dp" android:layout_marginEnd="5dp"/>
        <ImageView android:id="@+id/play_button" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icon_player_pause" android:scaleType="center" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/tag_rich" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/img_block_tag_rich" android:scaleType="center" android:layout_marginStart="3dp"/>
    </RelativeLayout>
    <TextView android:textSize="@dimen/regular_text_size" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:id="@+id/patchwall_item_text" android:paddingTop="@dimen/music_section_item_title_margin_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:lineSpacingExtra="1.5dp"/>
    <TextView android:textSize="@dimen/regular_text_size" android:textColor="@color/mj_color_gray_normal" android:ellipsize="end" android:id="@+id/patchwall_item_short_description" android:paddingTop="@dimen/music_section_item_title_margin_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:lineSpacingExtra="1.5dp"/>
</LinearLayout>
