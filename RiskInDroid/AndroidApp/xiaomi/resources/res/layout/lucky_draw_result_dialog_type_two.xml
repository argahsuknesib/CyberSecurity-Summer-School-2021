<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/container" android:background="#ffc43426" android:layout_width="307dp" android:layout_height="310dp" android:layout_marginTop="40dp" android:layout_centerHorizontal="true">
        <TextView android:textSize="14dp" android:textColor="#ffffe2b9" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/text_title_lucky_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="64dp" android:layout_marginRight="20dp" android:text="亲爱的米粉,请查收你的双十一好礼" android:lineSpacingExtra="3dp"/>
        <TextView android:textSize="14dp" android:textColor="#ffffad38" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/text_title_lucky_detail" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginRight="20dp" android:text="满200元减30元现金券" android:lineSpacingExtra="3dp"/>
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/igv_lucky_product" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:scaleType="fitXY"/>
    </LinearLayout>
    <ImageView android:id="@+id/icon_close" android:padding="5dp" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="14dp" android:layout_marginRight="14dp" android:src="@drawable/icon_x" android:adjustViewBounds="true" android:layout_alignTop="@+id/container" android:layout_alignRight="@+id/container"/>
</RelativeLayout>
