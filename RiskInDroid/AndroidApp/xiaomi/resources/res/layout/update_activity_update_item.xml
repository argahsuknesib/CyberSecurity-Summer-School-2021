        <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:id="@+id/sub_title_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/sub_title_1" android:layout_alignStart="@+id/title"/>
        <TextView android:textColor="@color/mj_color_gray_heavy" android:id="@+id/tv_change_log_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/fireware_update_content" android:layout_below="@+id/sub_title_2" android:layout_alignStart="@+id/sub_title_2"/>
        <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/change_log" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_change_log_label" android:layout_marginEnd="62dp" android:layout_alignStart="@+id/title"/>
        <ImageView android:id="@+id/iv_expand" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/icon_update_expand" android:layout_alignBottom="@+id/change_log" android:layout_marginEnd="27dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="27dp" android:layout_marginTop="20dp" android:layout_marginRight="27dp"/>
</LinearLayout>
