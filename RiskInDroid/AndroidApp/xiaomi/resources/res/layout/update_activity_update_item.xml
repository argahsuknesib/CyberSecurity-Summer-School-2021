<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/category_divider" android:background="#0000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:alpha="0.15"/>
    <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_normal" android:gravity="center" android:id="@+id/category" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="32dp" android:layout_marginLeft="24dp" android:textAlignment="center" android:layout_marginStart="24dp"/>
    <View android:background="#000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24dp" android:layout_marginBottom="5dp" android:alpha="0.15"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
