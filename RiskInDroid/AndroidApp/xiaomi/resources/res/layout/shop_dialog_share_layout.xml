<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="30dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/shop_bg_share_dialog" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.mi.global.shop.widget.CustomTextView android:textSize="18dp" android:textColor="@color/text_color_b" android:gravity="center" android:id="@+id/title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="40dp" android:text="Share to "/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
            <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/ly_share_fb" android:layout_width="match_parent" android:layout_height="90dp" android:layout_weight="1">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/shop_ic_facebook"/>
                <com.mi.global.shop.widget.CustomTextView android:textSize="14dp" android:textColor="@color/text_color_d" android:gravity="center" android:layout_width="match_parent" android:layout_height="40dp" android:text="Facebook"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/ly_share_tw" android:layout_width="match_parent" android:layout_height="90dp" android:layout_weight="1">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/shop_ic_twitter"/>
                <com.mi.global.shop.widget.CustomTextView android:textSize="14dp" android:textColor="@color/text_color_d" android:gravity="center" android:layout_width="match_parent" android:layout_height="40dp" android:text="Twitter"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="#ffd0d0d0" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/ly_share_cancle" android:layout_width="match_parent" android:layout_height="60dp">
            <com.mi.global.shop.widget.CustomTextView android:textSize="14dp" android:textColor="@color/text_color_d" android:gravity="center" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/shop_cancel"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
