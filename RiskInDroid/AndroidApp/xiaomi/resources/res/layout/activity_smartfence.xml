<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="245dp">
        <Button android:id="@+id/addBtn" android:layout_width="60dp" android:layout_height="40dp" android:layout_marginTop="0dp" android:text="Add" android:layout_marginStart="0dp"/>
        <Button android:id="@+id/editBtn" android:layout_width="60dp" android:layout_height="40dp" android:layout_marginTop="-40dp" android:text="edit" android:layout_marginStart="61dp"/>
        <Button android:id="@+id/delBtn" android:layout_width="75dp" android:layout_height="40dp" android:layout_marginTop="-41dp" android:text="delete" android:layout_marginStart="122dp"/>
        <Button android:id="@+id/pauseBtn" android:layout_width="70dp" android:layout_height="40dp" android:layout_marginTop="-40dp" android:text="pause" android:layout_marginStart="198dp"/>
        <Button android:id="@+id/resumeBtn" android:layout_width="93dp" android:layout_height="40dp" android:layout_marginTop="-40dp" android:text="resume" android:layout_marginStart="269dp"/>
