    </LinearLayout>
    <TextView android:textSize="@dimen/font_size_17sp" android:gravity="center" android:id="@+id/tvTransactionPrice" android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingStart="@dimen/size_0dp" android:paddingEnd="@dimen/size_17dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
