<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/stock_subscribe_item" android:layout_width="match_parent" android:layout_height="@dimen/size_78dp" android:paddingStart="@dimen/size_17dp" android:paddingEnd="@dimen/size_17dp">
    <ImageView android:id="@+id/cover" android:layout_width="@dimen/size_50dp" android:layout_height="@dimen/size_50dp" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
