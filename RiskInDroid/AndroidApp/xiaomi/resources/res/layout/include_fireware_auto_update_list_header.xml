<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:id="@+id/tv_auto_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/fireware_auto_update" android:layout_marginStart="27dp"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/tv_auto_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/tv_auto_title" android:layout_marginStart="27dp" android:layout_marginEnd="80dp"/>
        <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/sb_autoupdate" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="27dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_push_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:id="@+id/tv_push_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/update_push_title" android:layout_marginStart="27dp"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/tv_push_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/update_push_tips" android:layout_below="@+id/tv_push_title" android:layout_marginStart="27dp" android:layout_marginEnd="80dp"/>
        <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/sb_push" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginEnd="27dp" android:layout_alignParentEnd="true"/>
        <View android:id="@+id/divider" android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="27dp" android:layout_marginTop="36dp" android:layout_marginRight="27dp" android:layout_below="@+id/tv_push_content"/>
        <TextView android:textSize="12sp" android:textColor="@color/mj_color_gray_normal" android:id="@+id/tv_sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="27dp" android:layout_marginTop="28dp" android:layout_marginBottom="10dp" android:text="@string/mj_fireware_auto_update_title" android:layout_below="@+id/divider"/>
    </RelativeLayout>
</LinearLayout>
