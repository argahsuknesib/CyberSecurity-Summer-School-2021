<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/root" android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_bar" android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="@dimen/mj_titlebar_height">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/module_a_3_return_btn" android:paddingLeft="@dimen/mj_titlebar_margin_left_right" android:paddingRight="@dimen/mj_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/mj_common_title_bar_return" android:scaleType="center" android:contentDescription="@string/action_back"/>
        <TextView android:textSize="@dimen/mj_title_bar_text_size" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/module_a_3_return_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/std_titlebar_return_area_size" android:layout_marginRight="@dimen/std_titlebar_return_area_size" android:maxLines="1"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/webview_container" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.xiaomi.smarthome.framework.webview.SmartHomeWebView android:id="@+id/usr_exp_plan_webview" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ScrollView android:id="@+id/usr_exp_plan_scrollview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/mj_color_black_75_transparent" android:id="@+id/usr_exp_plan_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
