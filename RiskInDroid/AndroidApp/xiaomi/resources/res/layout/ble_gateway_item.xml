<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/item_root" android:background="@drawable/choose_device_list_item_bg" android:layout_width="match_parent" android:layout_height="70dp">
    <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/image" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="16.5dp" android:scaleType="fitCenter" android:layout_centerVertical="true" android:layout_marginStart="16.5dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="60dp" android:layout_toRightOf="@+id/image" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_marginEnd="60dp" android:layout_toEndOf="@+id/image">
        <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:id="@+id/status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
    </LinearLayout>
    <ImageView android:id="@+id/signal_strength" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="24dp" android:src="@drawable/defaule_icon_ble_00" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="24dp" android:layout_alignParentEnd="true"/>
    <View android:id="@+id/divider" android:background="#000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24dp" android:layout_alignParentBottom="true" android:alpha="0.15" android:layout_marginStart="24dp"/>
</RelativeLayout>
