<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/LoginRegLayoutPadding">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/passport_hyperlink_text_color" android:gravity="center_vertical" android:id="@+id/tv_area_code" android:background="@drawable/passport_group_first_item_normal_bg" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/arrow_right" android:paddingEnd="@dimen/passport_arrow_right_padding_h"/>
    </FrameLayout>
    <EditText android:gravity="center_vertical" android:id="@+id/ev_phone" android:background="@drawable/passport_group_last_item_normal_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/passport_input_phone_hint" android:singleLine="true" android:maxLength="16" android:phoneNumber="true" style="@style/Widget.AppCompat.EditText"/>
    <com.xiaomi.passport.ui.settings.CaptchaView android:id="@+id/captcha_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16.67dp"/>
    <TextView android:layout_gravity="center_horizontal" android:id="@+id/error_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/passport_buttons_margin_v" android:textAllCaps="false" style="@style/ErrorNoticeAppearance"/>
    <Button android:id="@+id/btn_phone_next" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/passport_reg_content_bottom_margin" android:text="@string/passport_next" style="@style/ButtonHighlight"/>
</LinearLayout>
