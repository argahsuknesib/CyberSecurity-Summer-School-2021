<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_tips" android:background="@drawable/dialog_main_connect_bg" android:padding="22dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/tv_tips_title" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/miconnect_discovery_new_device"/>
        <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center_horizontal" android:id="@+id/device_img" android:layout_width="160dp" android:layout_height="160dp" android:layout_marginTop="30dp" android:scaleType="fitCenter"/>
        <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/tv_device_name" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/ll_mode_choose" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="45dp" android:layout_below="@+id/tv_wv_line">
                <TextView android:textSize="15sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/tv_ignore" android:background="@drawable/dialog_main_connect_sub_bg" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/ignore" android:layout_weight="3"/>
                <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                <TextView android:textSize="15sp" android:textColor="@color/mj_color_text_hightlight" android:gravity="center" android:id="@+id/tv_add_begin" android:background="@drawable/dialog_main_connect_sub_bg" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/add_begin" android:layout_weight="3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
