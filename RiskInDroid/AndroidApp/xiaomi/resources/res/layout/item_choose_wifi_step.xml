<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <RelativeLayout android:id="@+id/wifi_item" android:background="@drawable/choose_device_list_item_bg" android:layout_width="match_parent" android:layout_height="61dp">
        <ImageView android:id="@+id/wifi_pointer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/selected_icon_nor_3x" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginStart="3dp" android:layout_alignParentStart="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="80dp" android:layout_centerVertical="true" android:layout_marginStart="24dp">
            <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/mj_color_black" android:id="@+id/wifi_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="12sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/wifi_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
        </LinearLayout>
        <ImageView android:id="@+id/edit_wifi" android:layout_width="21dp" android:layout_height="21dp" android:layout_marginRight="18dp" android:src="@drawable/edit_wifi_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/img_wifi_signal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="53dp" android:src="@drawable/edit_wifi_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
