<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_bar" android:background="@color/mj_color_gray_normal" android:layout_width="match_parent" android:layout_height="@dimen/titlebar_height" android:layout_alignParentTop="true">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/module_a_3_return_btn" android:paddingLeft="@dimen/mj_titlebar_margin_left_right" android:paddingRight="@dimen/mj_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mj_common_title_bar_return" android:scaleType="center" android:contentDescription="@string/action_back" android:paddingStart="@dimen/mj_titlebar_margin_left_right" android:paddingEnd="@dimen/mj_titlebar_margin_left_right"/>
        <TextView android:textSize="@dimen/mj_title_bar_text_size" android:textColor="@color/mj_color_white" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/module_a_3_return_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/titlebar_return_area_size" android:layout_marginRight="@dimen/titlebar_return_area_size" android:maxLines="1" android:layout_marginStart="@dimen/titlebar_return_area_size" android:layout_marginEnd="@dimen/titlebar_return_area_size"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/top_space" android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_bar">
        <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
        <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/top_panel" android:background="@color/mj_color_gray_normal" android:paddingTop="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/top_space">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view_result" android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/std_word_003" android:textColor="@color/mj_color_white" android:gravity="center" android:id="@+id/select_tip" android:paddingBottom="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/select_tip" android:layout_below="@+id/recycler_view_result" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/anim_body" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/top_panel">
        <com.xiaomi.smarthome.library.common.widget.ListItemView android:id="@+id/switch_setting_view" android:layout_width="match_parent" android:layout_height="@dimen/std_list_item_height_single_line">
            <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/mj_color_black_100_transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notification_shortcut_switch" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:paddingStart="@dimen/tag_margin_left" android:paddingEnd="75dp" android:layout_alignParentStart="true"/>
            <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/switch_setting" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
            <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
        </com.xiaomi.smarthome.library.common.widget.ListItemView>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_bar">
        <View android:id="@+id/empty_devide_line" android:background="@color/mj_color_separator" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
        <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/common_white_empty_view_new"/>
    </LinearLayout>
</RelativeLayout>
