<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center" android:id="@+id/item_image" android:layout_width="150dp" android:layout_height="150dp" android:layout_marginTop="15dp" android:layout_marginBottom="10dp" android:scaleType="fitXY"/>
    <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="13dp" android:textColor="@color/black" android:id="@+id/item_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <com.xiaomi.shopviews.widget.customfont.CustomTextView android:id="@+id/item_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="descdescdescdescdesc"/>
    <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12dp" android:id="@+id/item_price_origin" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="10dp">
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12dp" android:textColor="@color/orange_red" android:id="@+id/item_price" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12dp" android:textColor="@color/orange_red" android:background="@drawable/bg_btn_orange_stroke" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Buy now" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
