<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:layout_width="17dp" android:layout_height="match_parent"/>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/settings_item_select" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp" android:src="@drawable/mj_lib_btn_icon_selected" android:importantForAccessibility="no"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/title_container" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="27dp" android:layout_weight="1">
        <TextView android:textSize="@dimen/font_size_14sp" android:textColor="@color/mj_color_black_80_transparent" android:ellipsize="end" android:id="@+id/settings_item_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:lines="1"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_black_45_transparent" android:ellipsize="end" android:id="@+id/settings_item_sub_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:maxLines="2"/>
    </LinearLayout>
    <com.xiaomi.smarthome.library.common.widget.SwitchButton android:layout_gravity="center_vertical" android:id="@+id/settings_item_switch_btn" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_black_45_transparent" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/settings_item_info" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="13dp" android:lines="1"/>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/settings_item_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mj_webp_widget_second_arrow_nor" android:importantForAccessibility="no"/>
    <View android:layout_width="17dp" android:layout_height="match_parent"/>
</LinearLayout>
