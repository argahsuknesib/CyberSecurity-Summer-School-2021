            </RelativeLayout>
            <LinearLayout android:background="@color/mj_color_black_20_transparent" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="27dp" android:layout_marginRight="27dp"/>
            <TextView android:textSize="@dimen/font_size_14sp" android:textColor="@color/mj_color_black_80_transparent" android:gravity="center_vertical" android:background="@drawable/common_white_list_item_padding" android:layout_width="match_parent" android:layout_height="0dp" android:text="@string/add_scene" android:layout_weight="1"/>
            <LinearLayout android:background="@color/mj_color_black_20_transparent" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="27dp" android:layout_marginRight="27dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
