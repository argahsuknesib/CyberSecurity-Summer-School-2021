        <ImageView android:id="@+id/close_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginRight="14dp" android:src="@drawable/std_icon_close" android:layout_alignParentRight="true" android:contentDescription="@string/mj_close"/>
