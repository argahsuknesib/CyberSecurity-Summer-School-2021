<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/ll_home_edit_group" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/home_name_container" android:layout_width="match_parent" android:layout_height="@dimen/std_list_item_height_single_line">
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/home_name_tag" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/home_name" android:maxLines="1" android:layout_centerVertical="true" android:layout_marginStart="27dp" android:layout_marginEnd="20dp" android:layout_alignParentStart="true"/>
        <ImageView android:id="@+id/arrow_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/um_arrow" android:layout_centerVertical="true" android:importantForAccessibility="no" android:layout_marginStart="5dp" android:layout_marginEnd="27dp" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="13dp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:gravity="end" android:id="@+id/name_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true" android:textAlignment="gravity" android:layout_toStartOf="@+id/arrow_right" android:layout_toEndOf="@+id/home_name_tag"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/home_loc_container" android:layout_width="match_parent" android:layout_height="@dimen/std_list_item_height_single_line" android:layout_below="@+id/home_name_container">
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/home_loc_tag" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/home_loc" android:maxLines="1" android:layout_centerVertical="true" android:layout_marginStart="27dp" android:layout_marginEnd="20dp" android:layout_alignParentStart="true"/>
        <ImageView android:id="@+id/arrow_right1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/um_arrow" android:layout_centerVertical="true" android:importantForAccessibility="no" android:layout_marginStart="5dp" android:layout_marginEnd="27dp" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="13dp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:gravity="end" android:id="@+id/home_loc_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true" android:textAlignment="gravity" android:layout_toStartOf="@+id/arrow_right1" android:layout_toEndOf="@+id/home_loc_tag"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/home_device_size_container" android:layout_width="match_parent" android:layout_height="@dimen/std_list_item_height_single_line" android:layout_below="@+id/home_loc_container">
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/home_device_size_tag" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/home_device_size" android:maxLines="1" android:layout_centerVertical="true" android:layout_marginStart="27dp" android:layout_marginEnd="20dp" android:layout_alignParentStart="true"/>
        <TextView android:textSize="13dp" android:textColor="@color/mj_color_gray_lighter" android:ellipsize="end" android:gravity="end" android:id="@+id/home_device_size_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true" android:textAlignment="gravity" android:layout_marginEnd="26dp" android:layout_toEndOf="@+id/home_device_size_tag"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/home_room_manager_container" android:layout_width="match_parent" android:layout_height="134dp">
        <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_alignParentTop="true" android:layout_marginStart="27dp" android:layout_marginEnd="27dp"/>
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/home_room_manager_tag" android:layout_width="wrap_content" android:layout_height="@dimen/std_list_item_height_single_line" android:text="@string/home_manager" android:maxLines="1" android:layout_centerVertical="true" android:layout_marginStart="27dp" android:layout_marginEnd="20dp" android:layout_alignParentStart="true"/>
        <ImageView android:id="@+id/arrow_right2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/um_arrow" android:layout_centerVertical="true" android:importantForAccessibility="no" android:layout_marginStart="5dp" android:layout_marginEnd="27dp" android:layout_alignParentEnd="true"/>
        <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true" android:layout_marginStart="27dp" android:layout_marginEnd="27dp"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/bg_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/fl_room_bg" android:layout_width="match_parent" android:layout_height="@dimen/std_list_item_height_single_line">
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/mj_color_black_100_transparent" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/room_bg_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/std_list_content_margin_left_27" android:text="@string/input_tag_name_home_bg" android:maxLines="1"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="27dp" android:src="@drawable/um_arrow" android:importantForAccessibility="no"/>
        </FrameLayout>
        <include layout="@layout/home_room_wallpaper_preview_view"/>
        <View android:id="@+id/sd_room_bg_divider" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="27dp" android:layout_marginRight="27dp" android:layout_below="@+id/sd_room_bg"/>
    </RelativeLayout>
    <include android:id="@+id/home_member_title_container" android:layout_width="match_parent" android:layout_height="@dimen/std_list_head_line_height" android:layout_marginTop="8dp" layout="@layout/tag_group_item_common_6"/>
    <com.xiaomi.smarthome.library.common.widget.ExpandListView android:id="@+id/lv_memeber" android:background="@color/mj_color_white" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@android:color/transparent" android:divider="@null"/>
</LinearLayout>
