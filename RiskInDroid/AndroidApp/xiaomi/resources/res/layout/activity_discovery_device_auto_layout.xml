<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_bar" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="@dimen/mj_titlebar_height">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/module_a_3_return_btn" android:paddingLeft="@dimen/mj_titlebar_margin_left_right" android:paddingRight="@dimen/mj_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/mj_common_title_bar_return" android:scaleType="center" android:contentDescription="@string/action_back"/>
        <TextView android:textSize="@dimen/mj_title_bar_text_size" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/module_a_3_return_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/std_titlebar_return_area_size" android:layout_marginRight="@dimen/std_titlebar_return_area_size" android:maxLines="1"/>
    </FrameLayout>
    <ScrollView android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/title_bar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.xiaomi.smarthome.library.common.widget.ListItemView android:id="@+id/wifi_discovery_auto_container" android:background="@drawable/mj_rs_common_white_list_padding_no_left_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/std_list_item_height_three_line">
                <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/wifi_discovery_auto_switch" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                    <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/mj_color_black_100_transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/main_connect_wifi_discovery_device"/>
                    <TextView android:textSize="@dimen/std_list_font_size_subtitle" android:textColor="@color/mj_color_gray_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="170dp" android:text="@string/main_connect_wifi_discovery_device_tip"/>
                </LinearLayout>
                <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
            </com.xiaomi.smarthome.library.common.widget.ListItemView>
            <com.xiaomi.smarthome.library.common.widget.ListItemView android:id="@+id/ble_discovery_auto_container" android:background="@drawable/mj_rs_common_white_list_padding_no_left_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/std_list_item_height_three_line">
                <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/ble_discovery_auto_switch" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                    <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/mj_color_black_100_transparent" android:id="@+id/usr_exp_plan_container_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/main_connect_ble_discovery_device"/>
                    <TextView android:textSize="@dimen/std_list_font_size_subtitle" android:textColor="@color/mj_color_gray_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="170dp" android:text="@string/main_connect_ble_discovery_device_tip"/>
                </LinearLayout>
                <View android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
            </com.xiaomi.smarthome.library.common.widget.ListItemView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
