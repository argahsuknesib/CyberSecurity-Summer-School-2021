<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/flash_timer_hour" android:background="@drawable/bg_countdown" android:layout_width="20dp" android:layout_height="20dp" android:text="00"/>
    <TextView android:textSize="12dp" android:textColor="@color/trans_O_50" android:gravity="center" android:id="@+id/flash_span_one" android:layout_width="8dp" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:text="@string/flash_time_split"/>
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/flash_timer_min" android:background="@drawable/bg_countdown" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="2dp" android:text="00"/>
    <TextView android:textSize="12dp" android:textColor="@color/trans_O_50" android:gravity="center" android:id="@+id/flash_span_two" android:layout_width="8dp" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:text="@string/flash_time_split"/>
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/flash_timer_sec" android:background="@drawable/bg_countdown" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="2dp" android:text="00"/>
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/flash_timer_end_desc" android:background="@color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="2dp" android:text=""/>
