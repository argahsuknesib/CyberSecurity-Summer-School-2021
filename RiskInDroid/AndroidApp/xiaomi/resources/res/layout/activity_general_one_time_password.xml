<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="@dimen/mj_titlebar_height">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/module_a_3_return_btn" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="9dp" android:src="@drawable/mj_common_title_bar_return" android:scaleType="center" android:contentDescription="@string/action_back"/>
        <TextView android:textSize="18dp" android:textColor="@color/mj_color_black_100_transparent" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/module_a_3_return_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/titlebar_return_area_size" android:layout_marginRight="@dimen/titlebar_return_area_size" android:text="@string/one_time_password_dialog_title" android:maxLines="1" android:layout_marginStart="@dimen/titlebar_return_area_size" android:layout_marginEnd="@dimen/titlebar_return_area_size"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="27dp" android:layout_below="@+id/title_bar" android:layout_centerHorizontal="true">
        <TextView android:textSize="24sp" android:textColor="@color/mj_color_gray_heavier" android:id="@+id/generate_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_time_password_ready_generate_title"/>
        <TextView android:textSize="14sp" android:textColor="@color/mj_color_gray_normal" android:id="@+id/generate_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/password_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="89dp">
            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/password_text_1" android:background="@drawable/password_item_shape" android:layout_width="48dp" android:layout_height="48dp"/>
            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/password_text_2" android:background="@drawable/password_item_shape" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="6dp"/>
            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/password_text_3" android:background="@drawable/password_item_shape" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="6dp"/>
            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/password_text_4" android:background="@drawable/password_item_shape" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="6dp"/>
            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/password_text_5" android:background="@drawable/password_item_shape" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="6dp"/>
            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/password_text_6" android:background="@drawable/password_item_shape" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="6dp"/>
            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/password_text_7" android:background="@drawable/password_item_shape" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="6dp"/>
            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/password_text_8" android:background="@drawable/password_item_shape" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="6dp"/>
        </LinearLayout>
        <TextView android:textSize="14dp" android:textColor="@color/mj_color_green_normal" android:gravity="left" android:id="@+id/copy_password" android:visibility="gone" android:layout_width="144dp" android:layout_height="19dp" android:layout_marginLeft="3dp" android:layout_marginTop="15dp" android:text="@string/one_time_password_click_copy"/>
    </LinearLayout>
    <RelativeLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="153dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="15dp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/copy_success_hint" android:background="@drawable/toast_black_bg" android:visibility="gone" android:layout_width="156dp" android:layout_height="48dp" android:layout_marginBottom="40dp" android:text="@string/one_time_password_copy_success"/>
        <TextView android:textSize="12sp" android:textColor="#fff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/share_weixin" android:visibility="gone" android:layout_width="312dp" android:layout_height="42dp" android:layout_marginTop="10dp" android:text="@string/one_time_password_click_share" style="@style/ConfirmNormalBtn"/>
        <TextView android:textSize="13dp" android:textColor="@color/mj_color_gray_normal" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/finish" android:background="@drawable/selector_copy_password_button" android:visibility="gone" android:layout_width="312dp" android:layout_height="42dp" android:layout_marginTop="10dp" android:text="@string/finish"/>
        <TextView android:textSize="12sp" android:textColor="#fff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/click_generate" android:layout_width="match_parent" android:layout_height="42dp" android:text="@string/one_time_password_click_generate" android:layout_marginStart="27dp" android:layout_marginEnd="27dp" style="@style/ConfirmNormalBtn"/>
    </LinearLayout>
</RelativeLayout>
