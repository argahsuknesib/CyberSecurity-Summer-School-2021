<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:visibility="gone" layout="@layout/mj_module_a_3_title_bar_return"/>
    <RelativeLayout android:id="@+id/container" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/title_bar">
        <RelativeLayout android:id="@+id/miui_earphone_layout" android:layout_width="252dp" android:layout_height="264dp" android:layout_marginTop="42dp" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/miui_earphone_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center"/>
            <ImageView android:id="@+id/miui_earphone_exception_icon" android:background="@drawable/miui_earphone_exception_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center"/>
            <ImageView android:id="@+id/search_icon" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/miui_earphone_search" android:scaleType="center"/>
        </RelativeLayout>
        <TextView android:textSize="13sp" android:textColor="#333333" android:gravity="center" android:id="@+id/search_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:text="@string/miui_earphone_scanning" android:layout_below="@+id/miui_earphone_layout" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="13sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/retry_button" android:background="@drawable/miui_earphone_button_shape" android:visibility="gone" android:layout_width="314dp" android:layout_height="40dp" android:layout_marginBottom="24dp" android:text="@string/miui_earphone_try_again" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
