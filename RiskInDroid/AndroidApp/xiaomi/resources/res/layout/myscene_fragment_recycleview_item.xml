<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.smarthome.library.common.widget.ListItemView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/sort_action_item" android:background="@drawable/common_list_white_backgroud_selector" android:layout_width="match_parent" android:layout_height="99dp" android:minHeight="99dp">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/lite_scene_name_ll" android:paddingLeft="@dimen/scene_list_item_padding_left" android:paddingTop="13dp" android:paddingRight="@dimen/scene_list_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/scene_list_item_padding_left" android:paddingEnd="@dimen/scene_list_item_padding_right">
        <TextView android:textSize="15sp" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:id="@+id/lite_scene_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/my_scene_fragment_name_tv_max_width" android:text="" android:maxLines="1"/>
        <TextView android:textSize="11sp" android:textColor="@color/mj_color_white" android:gravity="center" android:id="@+id/new_tag" android:background="@drawable/device_status_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="19dp" android:layout_marginLeft="15dp" android:text="NEW" android:layout_toRightOf="@+id/lite_scene_name_tv"/>
    </RelativeLayout>
    <View android:id="@+id/recommend_divide_line" android:background="@color/mj_color_separator" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    <RelativeLayout android:paddingLeft="@dimen/scene_list_item_padding_left" android:paddingRight="@dimen/scene_list_item_padding_right" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="3dp" android:layout_below="@+id/lite_scene_name_ll" android:layout_alignParentLeft="true" android:paddingStart="@dimen/scene_list_item_padding_left" android:paddingEnd="@dimen/scene_list_item_padding_right" android:layout_alignParentStart="true">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="56dp" android:layout_height="56dp">
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/icon_condition" android:layout_width="56dp" android:layout_height="56dp"/>
                <ImageView android:id="@+id/icon_condition_more" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scene_all_more_icon" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/scene_all_link_icon"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lite_scene_icon_ll" android:layout_width="wrap_content" android:layout_height="56dp"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/mj_titlebar_more" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mj_titlebar_more"/>
        </LinearLayout>
