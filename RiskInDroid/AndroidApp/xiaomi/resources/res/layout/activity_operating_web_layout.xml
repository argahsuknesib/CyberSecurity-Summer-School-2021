<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/loading_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:layout_width="match_parent" android:layout_height="@dimen/titlebar_height" android:layout_alignParentTop="true" layout="@layout/module_a_3_title_bar_return_more"/>
        <ProgressBar android:gravity="center_vertical" android:id="@+id/loading_progress" android:layout_width="match_parent" android:layout_height="2dp" android:max="100" android:indeterminateDrawable="@null" android:progressDrawable="@drawable/play_progress" style="@style/Widget.ProgressBar.Horizontal"/>
    </LinearLayout>
    <com.xiaomi.smarthome.framework.webview.SmartHomeWebView android:id="@+id/content_webview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:windowSoftInputMode="adjustResize"/>
</FrameLayout>
