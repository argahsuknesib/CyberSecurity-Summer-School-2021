<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/module_a_3_title_bar_return_rightimage"/>
    <FrameLayout android:id="@+id/root" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="vertical" android:id="@+id/scene_confirm" android:background="@color/mj_color_white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/icon_image" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginTop="29dp" android:layout_centerHorizontal="true" app:placeholderImage="@drawable/default_icon_user240_nor" app:roundAsCircle="true"/>
            <TextView android:textSize="18sp" android:textColor="@color/mj_color_black" android:id="@+id/account_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="95dp" android:layout_marginTop="14dp" android:layout_marginRight="95dp" android:maxLines="1" android:layout_below="@+id/icon_image" android:layout_centerHorizontal="true" android:textAlignment="center"/>
            <TextView android:textSize="15sp" android:textColor="@color/mj_color_gray_normal" android:ellipsize="end" android:id="@+id/share_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="34dp" android:layout_marginRight="30dp" android:singleLine="true" android:layout_below="@+id/account_name" android:layout_centerHorizontal="true" android:textAlignment="center"/>
            <TextView android:textSize="16sp" android:textColor="@color/mj_color_btn_green_text_nor" android:gravity="center" android:id="@+id/button_confirm" android:layout_width="match_parent" android:layout_marginLeft="27dp" android:layout_marginRight="27dp" android:layout_marginBottom="27dp" android:text="@string/confirm" android:layout_alignParentBottom="true" android:textAlignment="center" style="@style/ConfirmNormalGreenBtn"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/scene_search" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/device_image" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginTop="13dp" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="18sp" android:textColor="@color/mj_color_black" android:id="@+id/device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="95dp" android:layout_marginTop="18dp" android:layout_marginRight="95dp" android:singleLine="true" android:includeFontPadding="false" android:layout_below="@+id/device_image" android:layout_centerHorizontal="true" android:textAlignment="center"/>
            <TextView android:textSize="15sp" android:textColor="@color/mj_color_gray_normal" android:gravity="center" android:id="@+id/tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="34dp" android:text="@string/share_device_tip" android:includeFontPadding="false" android:layout_below="@+id/device_name" android:layout_centerHorizontal="true" android:marqueeRepeatLimit="marquee_forever" android:textAlignment="center"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/linear_share_device" android:background="@drawable/common_input_bg" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="27dp" android:layout_marginTop="18dp" android:layout_marginRight="27dp" android:layout_below="@+id/tip">
                <AutoCompleteTextView android:textSize="14sp" android:textColor="@color/mj_color_black" android:textColorHint="@color/mj_color_gray_lighter" android:gravity="center_vertical" android:id="@+id/account_editor" android:background="@null" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/login_account_hint" android:singleLine="true" android:layout_weight="1" android:dropDownVerticalOffset="0dp"/>
                <ImageView android:layout_gravity="center" android:id="@+id/btn_share_device" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/share_icon_maillist" android:contentDescription="@string/my_contacts"/>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="@color/mj_color_white_90_transparent" android:gravity="center" android:layout_gravity="bottom" android:id="@+id/button_search" android:background="@drawable/mj_normal_confirm_button_radius" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginLeft="27dp" android:layout_marginRight="27dp" android:layout_marginBottom="27dp" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
