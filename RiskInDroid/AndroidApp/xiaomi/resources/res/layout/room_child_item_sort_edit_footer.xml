<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.smarthome.library.common.widget.ListItemView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/space" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="20dp">
        <View android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/desc_edit_mode" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_marginTop="10dp" android:layout_marginBottom="25dp" android:text="@string/room_remove_confirm" android:layout_marginStart="17dp"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/view_group" android:background="@drawable/selector_list_item" android:layout_width="match_parent" android:layout_height="62dp" android:layout_below="@+id/space">
        <View android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="1px"/>
        <ImageView android:id="@+id/imageView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/um_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/delete_btn" android:padding="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:src="@drawable/list_icon_delete_dis" android:scaleType="center" android:layout_centerVertical="true" android:layout_marginStart="13dp"/>
        <ImageView android:id="@+id/room_icon" android:background="@drawable/shape_bg_room_icon" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginLeft="22dp" android:layout_toRightOf="@+id/delete_btn" android:layout_centerVertical="true" android:layout_marginStart="22dp" android:layout_toEndOf="@+id/delete_btn"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="@dimen/listitem_7_height" android:layout_marginLeft="13dp" android:layout_toRightOf="@+id/room_icon" android:layout_marginStart="13dp" android:layout_toEndOf="@+id/room_icon">
            <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="220dp" android:maxLines="1"/>
            <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:maxLength="20"/>
        </LinearLayout>
        <View android:id="@+id/divider_item" android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</com.xiaomi.smarthome.library.common.widget.ListItemView>
