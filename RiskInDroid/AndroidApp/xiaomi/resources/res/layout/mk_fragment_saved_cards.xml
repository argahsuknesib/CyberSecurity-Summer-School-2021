<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/mk_uic_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/white_container">
            <TextView android:id="@+id/amount" android:text="" style="@style/textBlueHeading"/>
            <View android:background="@color/mk_uic_bg" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp"/>
            <TextView android:gravity="center_horizontal" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="12dp" android:text="Please select one of the saved card(s) to pay"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_saved_cards" android:background="@color/mk_uic_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp"/>
        </LinearLayout>
        <Button android:id="@+id/btnContinueWithNewCard" android:visibility="visible" android:text="Other Payment Options" style="@style/new_secondary_button"/>
    </LinearLayout>
</ScrollView>
