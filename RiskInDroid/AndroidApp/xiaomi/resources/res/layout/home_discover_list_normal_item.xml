<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_product_image" android:layout_width="115dp" android:layout_height="90dp" android:layout_marginTop="20dp" android:scaleType="fitXY" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
    <RelativeLayout android:id="@+id/ll_content" android:layout_width="match_parent" android:layout_height="90dp" android:layout_marginTop="20dp" android:layout_toRightOf="@+id/iv_product_image" android:layout_marginStart="15dp" android:layout_marginEnd="15dp">
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="16dp" android:textColor="@color/pay_title_color" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="2"/>
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12dp" android:textColor="@color/three_image_old_price_text_color" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_alignParentBottom="true"/>
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12dp" android:textColor="@color/home_discover_item_like_number_color" android:id="@+id/tv_like_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/iv_like" android:layout_width="16dp" android:layout_height="10dp" android:layout_marginRight="5dp" android:layout_marginBottom="9dp" android:src="@drawable/discover_article_look_num" android:scaleType="fitXY" android:layout_toLeftOf="@+id/tv_like_number" android:layout_alignParentBottom="true" android:layout_marginEnd="5dp"/>
    </RelativeLayout>
</RelativeLayout>
