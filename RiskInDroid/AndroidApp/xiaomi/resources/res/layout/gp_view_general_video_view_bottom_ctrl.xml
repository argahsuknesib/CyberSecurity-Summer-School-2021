<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/bottom_ctrl_ll" android:background="@drawable/camera_title_background_bottom" android:paddingTop="12dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="@dimen/general_player_bottom_ctl_height" android:paddingEnd="3dp">
        <CheckBox android:id="@+id/cbTogglePlay" android:layout_width="@dimen/general_player_icon_size" android:layout_height="@dimen/general_player_icon_size" android:button="@drawable/gp_ic_player_toggle_play"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llProgressBar" android:paddingTop="1dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="6dp" android:layout_marginEnd="8dp">
            <TextView android:textSize="@dimen/general_player_text_size" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvVideoStart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="40dp" android:text="@string/gp_time_0" android:singleLine="true"/>
            <SeekBar android:layout_gravity="center_vertical" android:id="@+id/sbProgress" android:layout_width="0dp" android:layout_height="@dimen/general_player_progress_height" android:maxHeight="1dp" android:max="1000" android:progress="0" android:progressDrawable="@drawable/gp_view_video_progress" android:minHeight="1dp" android:thumb="@drawable/cs_icon_progressbar_normal2" android:thumbOffset="0dp" android:layout_weight="1" android:paddingStart="6dp" android:paddingEnd="6dp"/>
            <TextView android:textSize="@dimen/general_player_text_size" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvVideoEnd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gp_time_0" android:singleLine="true"/>
        </LinearLayout>
        <CheckBox android:gravity="center" android:id="@+id/cbIsMute" android:layout_width="@dimen/general_player_icon_size" android:layout_height="@dimen/general_player_icon_size" android:button="@drawable/gp_ic_player_toggle_audio"/>
        <com.xiaomi.smarthome.camera.view.RectTextView android:textSize="@dimen/general_player_text_size" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvsMultiSpeed" android:paddingTop="12.5dp" android:paddingBottom="12.5dp" android:layout_width="@dimen/general_player_icon_size" android:layout_height="@dimen/general_player_icon_size" android:paddingStart="9.5dp" android:paddingEnd="9.5dp"/>
        <com.mijia.generalplayer.videoview.TouchEffectImageView android:id="@+id/ivFullScreen" android:layout_width="@dimen/general_player_icon_size" android:layout_height="@dimen/general_player_icon_size" android:src="@drawable/camera_ic_player_fullscreen"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView android:layout_gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/card_ivImage" android:visibility="gone" android:layout_width="100dp" android:layout_height="60dp" android:layout_marginTop="30dp" android:layout_marginStart="25dp" app:cardCornerRadius="5dp" app:cardElevation="0dp">
        <com.xiaomi.smarthome.library.common.widget.RoundedImageView android:id="@+id/ivImage" android:background="@color/camera_white" android:padding="1.5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" app:riv_corner_radius="5dp"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>
