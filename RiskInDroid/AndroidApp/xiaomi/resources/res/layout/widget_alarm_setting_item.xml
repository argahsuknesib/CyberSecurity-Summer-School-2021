<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="61dp">
    <TextView android:textSize="@dimen/text_size_15" android:textColor="@color/mj_color_black" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="17dp" android:layout_marginEnd="8dp"/>
    <TextView android:textSize="@dimen/text_size_15" android:textColor="@color/mj_color_gray_normal" android:gravity="end" android:id="@+id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/more" android:layout_toEndOf="@+id/title"/>
    <ImageView android:id="@+id/more" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mico_icon_more" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/margin_17dp"/>
    <SeekBar android:id="@+id/progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:progressDrawable="@drawable/player_progress_seek_bar" android:thumb="@drawable/icon_seek_bar" android:layout_centerVertical="true" android:layout_marginStart="30dp" android:layout_marginEnd="20dp" android:layout_toEndOf="@+id/title" style="@style/App.Widget.SeekBar"/>
    <View android:id="@+id/divider" android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="@dimen/common_divider_line_size" android:layout_alignParentBottom="true" android:layout_marginStart="20dp" android:layout_marginEnd="18dp"/>
</RelativeLayout>
