        <LinearLayout android:orientation="horizontal" android:id="@+id/finish_error_btn_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:layout_marginRight="26dp" android:layout_alignTop="@+id/finish_success_btn" android:layout_alignParentBottom="true" android:layout_marginStart="26dp" android:layout_marginEnd="26dp">
            <TextView android:textSize="@dimen/font_size_4" android:textColor="@color/mj_color_gray_normal" android:gravity="center" android:id="@+id/cancel_btn" android:background="@drawable/common_btn_left" android:layout_width="match_parent" android:layout_height="45dp" android:text="@string/sh_common_cancel" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/font_size_4" android:textColor="@color/mj_color_gray_normal" android:gravity="center" android:id="@+id/retry_btn" android:background="@drawable/common_btn_right" android:layout_width="match_parent" android:layout_height="45dp" android:text="@string/mj_retry" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/font_size_4" android:textColor="@color/mj_color_gray_normal" android:gravity="center" android:id="@+id/finish_success_btn" android:background="@drawable/common_button" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="26dp" android:layout_marginRight="26dp" android:text="@string/miio_sub_device_study_complete" android:layout_alignParentBottom="true" android:layout_marginStart="26dp" android:layout_marginEnd="26dp"/>
    </RelativeLayout>
    <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/common_button" android:gravity="center" android:id="@+id/finish_title" android:background="@drawable/common_button" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="20dp" android:minHeight="40dp" android:text="@string/next_button" android:singleLine="true" android:layout_alignParentBottom="true" android:layout_centerVertical="true" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
</com.xiaomi.smarthome.library.common.widget.ResizeLayout>
