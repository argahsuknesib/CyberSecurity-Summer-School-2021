            <TextView android:textSize="@dimen/font_size_0" android:textColor="@color/mj_color_text_blue_bg" android:layout_gravity="center" android:id="@+id/connecting_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
