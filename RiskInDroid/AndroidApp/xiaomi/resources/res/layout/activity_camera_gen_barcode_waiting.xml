<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.smarthome.library.common.widget.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/top_view" android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="match_parent">
