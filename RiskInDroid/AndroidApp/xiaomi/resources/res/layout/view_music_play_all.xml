<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#f9f9f9" android:layout_width="match_parent" android:layout_height="@dimen/music_item_header_height">
    <ImageView android:id="@+id/music_play_all_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mico_icon_play_all_selecter" android:layout_centerVertical="true" android:layout_marginStart="@dimen/music_item_padding_start"/>
    <TextView android:textSize="@dimen/content_text_size" android:textColor="@color/mj_color_black" android:id="@+id/music_play_all_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/music_play_all" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/music_play_all_icon"/>
    <TextView android:textSize="@dimen/regular_text_size" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/music_play_all_total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/music_play_all_play"/>
    <View android:layout_alignParentBottom="true" style="@style/App.Divider.Horizontal"/>
</RelativeLayout>
