<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="7dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="5dp" android:paddingEnd="5dp">
    <FrameLayout android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="@drawable/all_camera_item_mask_new">
        <FrameLayout android:id="@+id/video_view_container" android:layout_width="match_parent" android:layout_height="190dp"/>
        <ImageView android:id="@+id/video_view_cover" android:background="#d8d8d8" android:layout_width="match_parent" android:layout_height="190dp" android:scaleType="centerInside"/>
        <FrameLayout android:layout_gravity="center" android:id="@+id/fl_Offline" android:background="@drawable/camera_offline_larg_bg" android:layout_width="match_parent" android:layout_height="190dp">
            <ImageView android:id="@+id/fl_Offline_img" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
            <TextView android:textSize="@dimen/font_size_12sp" android:textColor="#4dffffff" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/offline_device" android:drawableTop="@drawable/icon_camera_offline_bg"/>
        </FrameLayout>
        <ImageView android:id="@+id/video_view_cover_corner" android:layout_width="match_parent" android:layout_height="190dp"/>
        <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/camera_black" android:layout_gravity="center" android:id="@+id/video_unsupport_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unsupport_camera_play"/>
        <RelativeLayout android:id="@+id/btn_large_view" android:background="@drawable/camera_title_btn_bg" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView android:id="@+id/full_screen_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/all_camera_item_full_screen_selector" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
            <ImageView android:id="@+id/mute_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/all_camera_item_mute_on" android:scaleType="center" android:layout_toLeftOf="@+id/full_screen_button" android:layout_centerVertical="true" android:layout_marginEnd="40dp" android:layout_toStartOf="@+id/full_screen_button"/>
            <ImageView android:id="@+id/pause_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/all_camera_item_play_selector" android:scaleType="center" android:layout_toLeftOf="@+id/mute_button" android:layout_centerVertical="true" android:layout_marginEnd="40dp" android:layout_toStartOf="@+id/mute_button"/>
        </RelativeLayout>
        <ProgressBar android:layout_gravity="center" android:id="@+id/camera_loading" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:indeterminate="false" android:indeterminateOnly="true" android:indeterminateDrawable="@drawable/miui12_loading" android:indeterminateBehavior="repeat"/>
        <TextView android:textSize="10sp" android:textColor="@color/camera_white" android:id="@+id/tvStatus" android:background="@drawable/camera_icon_device_status_big_bg" android:paddingLeft="5dp" android:paddingTop="3dp" android:paddingRight="5dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="15dp"/>
        <ImageView android:layout_gravity="center" android:id="@+id/ivPlayCenter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_camera_play_center"/>
        <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/control_indicator_large" android:background="@drawable/camera_title_bottom_btn_bg" android:layout_width="match_parent" android:layout_height="50dp">
            <RelativeLayout android:layout_gravity="bottom" android:id="@+id/cloud_storage_container_large" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/font_size_14sp" android:textColor="@color/camera_white" android:ellipsize="none" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxEms="3" android:singleLine="true" android:layout_centerVertical="true"/>
                <View android:id="@+id/line" android:background="#99ffffff" android:layout_width="0.5dp" android:layout_height="10dp" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/title"/>
                <ImageView android:id="@+id/device_controller" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/camera_large_view_into" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="@dimen/font_size_14sp" android:textColor="@color/camera_white" android:ellipsize="end" android:id="@+id/device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_centerVertical="true" android:layout_toStartOf="@+id/device_controller" android:layout_toEndOf="@+id/line"/>
                <ImageView android:layout_gravity="right" android:id="@+id/red_point" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/all_camera_item_red_point"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
