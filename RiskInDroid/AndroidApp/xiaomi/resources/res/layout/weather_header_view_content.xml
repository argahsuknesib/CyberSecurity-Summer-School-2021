<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="65dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/bottom_content" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:weightSum="3" android:layout_alignParentBottom="true" android:paddingStart="5dp" android:paddingEnd="5dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/aqi_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="17dp" android:textColor="@color/mj_color_white" android:gravity="bottom" android:id="@+id/aqi_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="－" android:includeFontPadding="false"/>
                <TextView android:textSize="@dimen/font_size_9sp" android:textColor="@color/mj_color_white" android:gravity="bottom" android:layout_gravity="top" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:layout_marginBottom="1dp" android:text="PM2.5" android:layout_marginStart="2dp"/>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="@color/mj_color_white" android:gravity="center" android:id="@+id/aqi_title_below" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/area_air_quality_outside_and_home"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/water_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="17dp" android:textColor="@color/mj_color_white" android:gravity="bottom" android:id="@+id/water_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="－" android:includeFontPadding="false"/>
                <TextView android:textSize="@dimen/font_size_9sp" android:textColor="@color/mj_color_white" android:gravity="bottom" android:layout_gravity="top" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:layout_marginBottom="1dp" android:text="TDS" android:layout_marginStart="2dp"/>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="@color/mj_color_white" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/area_water_quality_purified"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/temp_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="17dp" android:textColor="@color/mj_color_white" android:id="@+id/temp_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="－" android:includeFontPadding="false"/>
                <TextView android:textSize="@dimen/font_size_9sp" android:textColor="@color/mj_color_white" android:gravity="bottom" android:layout_gravity="top" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:layout_marginBottom="2dp" android:text="℃" android:layout_marginStart="2dp"/>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="@color/mj_color_white" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/area_temperature_high_low"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:orientation="vertical" android:id="@+id/top_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/bottom_content">
        <TextView android:textSize="33dp" android:textColor="@color/mj_color_white" android:id="@+id/title_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="－" android:includeFontPadding="false" android:layout_alignParentTop="true" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_white" android:gravity="top" android:layout_gravity="top" android:id="@+id/title_1_suffix" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:layout_marginTop="7dp" android:text="℃" android:layout_toRightOf="@+id/title_1" android:layout_marginStart="2dp" android:layout_toEndOf="@+id/title_1"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_white" android:id="@+id/weather_title_right" android:paddingLeft="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="" android:includeFontPadding="false" android:layout_toRightOf="@+id/title_1_suffix" android:layout_alignParentTop="true" android:alpha="0" android:paddingStart="3dp" android:layout_toEndOf="@+id/title_1_suffix"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_white" android:id="@+id/aqi_title_right" android:paddingLeft="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="" android:includeFontPadding="false" android:layout_toRightOf="@+id/weather_title_right" android:layout_alignParentTop="true" android:alpha="0" android:paddingStart="3dp" android:layout_toEndOf="@+id/weather_title_right"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_white" android:id="@+id/loc_title_right" android:paddingLeft="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:includeFontPadding="false" android:layout_toRightOf="@+id/title_1_suffix" android:layout_below="@+id/weather_title_right" android:alpha="0" android:paddingStart="3dp" android:layout_toEndOf="@+id/title_1_suffix"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/loc_weather_btm_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/title_1" android:layout_centerHorizontal="true">
            <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_white" android:id="@+id/weather_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="－" android:includeFontPadding="false"/>
            <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/mj_color_white" android:id="@+id/loc_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="－" android:includeFontPadding="false" android:layout_marginStart="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
