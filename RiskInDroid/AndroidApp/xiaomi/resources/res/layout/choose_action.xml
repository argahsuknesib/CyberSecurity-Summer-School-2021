<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:weightSum="1" style="@style/cb_relative_layout">
    <View android:background="@color/cb_border" style="@style/cb_horizontal_line"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" style="@style/cb_linear_layout">
        <LinearLayout android:layout_height="30dp" style="@style/cb_linear_layout">
            <TextView android:textSize="@dimen/cb_sixteenScaled" android:gravity="center" android:layout_width="match_parent" android:layout_marginTop="@dimen/cb_eight" android:layout_marginBottom="@dimen/cb_twelve" android:drawableTop="@drawable/slider" style="@style/cb_text_view"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" style="@style/cb_linear_layout">
            <TextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/cb_errorRed" android:gravity="center" android:id="@+id/error_message" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/cb_four" android:text="@string/cb_incorrect_otp_e" android:fontFamily="sans-serif-light" style="@style/cb_text_view"/>
            <TextView android:textSize="18sp" android:textColor="@color/cb_dark_grey" android:gravity="center" android:id="@+id/choose_text" android:layout_width="match_parent" android:layout_marginBottom="@dimen/cb_twelve" android:text="@string/cb_authenticate_with" android:fontFamily="sans-serif-light" style="@style/cb_text_view"/>
            <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" style="@style/cb_linear_layout">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/cb_sixteen" style="@style/cb_linear_layout">
                    <View android:background="@color/cb_background" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/cb_relative_layout">
                        <TextView android:textSize="13sp" android:textStyle="bold" android:gravity="center" android:id="@+id/pin" android:text="@string/cb_password" android:drawableTop="@drawable/pin_button_selector" android:layout_centerInParent="true" android:fontFamily="sans-serif-light" style="@style/cb_text_view"/>
                    </RelativeLayout>
                    <View android:id="@+id/view" android:background="@color/cb_background" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/cb_relative_layout">
                        <TextView android:textSize="13sp" android:textStyle="bold" android:gravity="center" android:layout_gravity="right" android:id="@+id/otp" android:text="@string/cb_sms_otp" android:drawableTop="@drawable/otp_button_selector" android:layout_centerInParent="true" android:fontFamily="sans-serif-light" style="@style/cb_text_view"/>
                    </RelativeLayout>
                    <View android:background="@color/cb_background" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                </LinearLayout>
                <RelativeLayout android:gravity="bottom" android:layout_gravity="bottom" android:background="@drawable/rectangle_box" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="left" android:orientation="horizontal" android:background="@null" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_alignParentLeft="true">
                        <TextView android:textSize="@dimen/cb_twelveScaled" android:textStyle="bold" android:textColor="@color/cb_textColor" android:gravity="center_vertical" android:layout_height="30dp" android:layout_marginLeft="5dp" android:drawableRight="@drawable/trusticon" android:drawablePadding="@dimen/cb_four" android:fontFamily="sans-serif-light" style="@style/cb_text_view"/>
                        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/cb_textColor" android:gravity="center_vertical" android:background="@null" android:layout_height="30dp" android:layout_marginLeft="@dimen/cb_four" android:text="@string/cb_powered_by" android:drawablePadding="@dimen/cb_four" android:fontFamily="sans-serif-light" style="@style/cb_text_view"/>
                        <TextView android:textSize="@dimen/cb_twelveScaled" android:textStyle="bold" android:gravity="center" android:background="@null" android:layout_height="20dp" android:layout_marginLeft="@dimen/cb_four" android:drawableLeft="@drawable/logo_payu" android:drawablePadding="@dimen/cb_four" android:fontFamily="sans-serif-light" style="@style/cb_text_view"/>
                    </LinearLayout>
                    <LinearLayout android:background="@null" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_alignParentRight="true" style="@style/cb_linear_layout">
                        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/bank_logo" android:background="@null" android:paddingRight="5dp" android:contentDescription="@string/cb_bank_logo" style="@style/cb_image_view"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
