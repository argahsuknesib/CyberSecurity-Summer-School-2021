<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/mj_color_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/_icon" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginTop="112dp" android:src="@drawable/mijia_icon_rounded" android:layout_centerHorizontal="true" android:importantForAccessibility="no"/>
    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:id="@+id/_app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/app_name2" android:layout_below="@+id/_icon" android:layout_centerHorizontal="true"/>
    <View android:id="@+id/empty" android:background="@color/mj_color_black_40_transparent" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/footer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/buttonPanel" android:background="@color/mj_color_dialog_bg_nor" android:paddingLeft="21dp" android:paddingRight="21dp" android:paddingBottom="27dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="16dp" android:gravity="center" android:id="@+id/cancel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:text="@string/disclaim_cancel" android:singleLine="true" android:layout_weight="1" style="@style/DeniedNormalGrayBtn"/>
            <TextView android:textSize="16dp" android:gravity="center" android:id="@+id/ok" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:text="@string/disclaim_confirm" android:singleLine="true" android:layout_weight="1" style="@style/ConfirmNormalGreenBtn"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/dialog_main_connect_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/buttonPanel">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/disclaim_title" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView android:textSize="16dp" android:textColor="@color/mj_color_gray_heavier" android:id="@+id/disclaim_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="17dp" android:adjustViewBounds="true" android:maxHeight="330dp" android:lineSpacingExtra="2dp" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/mj_color_gray_heavier" android:id="@+id/disclaim_content1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="29dp" android:maxHeight="350dp" android:text="@string/disclaim_join_user_exp_plan4" android:lineSpacingExtra="4dp" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
            <RelativeLayout android:id="@+id/remember_container2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginBottom="14dp" android:layout_marginStart="30dp">
                <ImageView android:id="@+id/remember2" android:background="@drawable/disclaim_remeber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/join_usr_exp_plan_tv2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="24dp" android:text="@string/disclaim_join_user_exp_plan1" android:layout_toRightOf="@+id/remember2" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/remember2"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/remember_container3" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginBottom="14dp" android:layout_marginStart="30dp">
                <ImageView android:id="@+id/remember3" android:background="@drawable/disclaim_remeber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/join_usr_exp_plan_tv3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="24dp" android:text="@string/disclaim_join_user_exp_plan2" android:layout_toRightOf="@+id/remember3" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/remember3"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/remember_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginBottom="14dp" android:layout_marginStart="30dp">
                <ImageView android:id="@+id/remember" android:background="@drawable/disclaim_remeber" android:padding="@dimen/listitem_menu_text_margin_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/join_usr_exp_plan_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="24dp" android:text="@string/disclaim_join_user_exp_plan" android:layout_toRightOf="@+id/remember" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/remember"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
