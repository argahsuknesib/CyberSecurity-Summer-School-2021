<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="15sp" android:textColor="#cc000000" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/title_bar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="90dp" android:layout_marginRight="90dp" android:text="扫描二维码" android:maxLines="1"/>
    </FrameLayout>
    <View android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1"/>
    <ImageView android:id="@+id/barcode_image" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <View android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
