<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="50dp">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title_bar_return" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/mj_tittlebar_main_device_back" android:tint="@color/mj_color_black"/>
        <TextView android:ellipsize="end" android:layout_gravity="center" android:id="@+id/title_bar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/titlebar_return_area_size" android:layout_marginRight="@dimen/titlebar_return_area_size" android:maxLines="1" style="@style/std_word_001"/>
        <TextView android:textSize="@dimen/sub_title_bar_text_size" android:textColor="@color/mj_color_black_50_transparent" android:ellipsize="end" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/sub_title_bar_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/titlebar_return_area_size" android:layout_marginRight="@dimen/titlebar_return_area_size" android:layout_marginBottom="@dimen/std_titlebar_sub_title_margin_bottom" android:maxLines="1"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/title_bar_more" android:paddingLeft="@dimen/mj_titlebar_margin_left_right" android:paddingRight="@dimen/mj_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/camera_tittlebar_main_more" android:scaleType="center" android:tint="@color/mj_color_black"/>
        <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/title_bar_redpoint" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/std_titlebar_redpoint_margin_top" android:layout_marginRight="@dimen/std_titlebar_redpoint_margin_right" android:src="@drawable/camera_tittlebar_massage_point" android:scaleType="center"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/title_bar_share" android:paddingLeft="@dimen/mj_titlebar_margin_left_right" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="56dp" android:src="@drawable/camera_tittlebar_share" android:scaleType="center"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/select_all_title_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/titlebar_height">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ivSelectAllCancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:src="@drawable/std_tittlebar_select_all_cancel"/>
        <TextView android:textSize="@dimen/mj_title_bar_text_size" android:textColor="@color/mj_color_gray_heavier" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/select_all_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/titlebar_return_area_size" android:layout_marginRight="@dimen/titlebar_return_area_size" android:lines="1"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ivSelectAll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="14dp" android:src="@drawable/icon_edit_select_all_black"/>
    </FrameLayout>
</FrameLayout>
