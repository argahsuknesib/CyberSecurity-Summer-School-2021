<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.xiaomi.smarthome.library.common.widget.ListItemView android:id="@+id/content" android:background="@drawable/mj_rs_common_white_list_padding" android:layout_width="match_parent" android:layout_height="74dp">
        <include android:id="@+id/device_icon_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" layout="@layout/iv_with_number_tips"/>
        <FrameLayout android:id="@+id/right_fl" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="60dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
            <TextView android:textSize="@dimen/font_size_5" android:textColor="@color/mj_color_black_50_transparent" android:gravity="center" android:layout_gravity="center" android:id="@+id/right_tv" android:background="@drawable/common_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="right"/>
            <CheckBox android:textSize="@dimen/font_size_14sp" android:textColor="@color/mj_color_black" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/ratio_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:checked="false" android:button="@drawable/ratio_btn" android:lines="1" android:layout_marginStart="14dp"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_toLeftOf="@+id/right_fl" android:layout_toRightOf="@+id/device_icon_layout" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/right_fl" android:layout_toEndOf="@+id/device_icon_layout">
            <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/mj_color_black_100_transparent" android:ellipsize="end" android:gravity="left" android:layout_gravity="left" android:id="@+id/device_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="@dimen/std_list_font_size_subtitle" android:textColor="@color/mj_color_gray_normal" android:gravity="left" android:layout_gravity="left" android:id="@+id/device_item_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/txt_padding_4" android:layout_marginRight="30dp" android:maxLines="2"/>
        </LinearLayout>
        <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:src="@drawable/um_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
    </com.xiaomi.smarthome.library.common.widget.ListItemView>
    <include android:id="@+id/list_space" android:visibility="gone" android:layout_width="match_parent" android:layout_height="7dp" android:layout_alignParentBottom="true" layout="@layout/common_list_space_empty"/>
</LinearLayout>
