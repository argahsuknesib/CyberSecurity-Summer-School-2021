<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/title_bar" layout="@layout/mj_module_a_3_title_bar_return"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1" android:layout_below="@+id/title_bar">
        <LinearLayout android:orientation="vertical" android:background="@color/mj_color_white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/mj_color_gray_heavier" android:id="@+id/feedback_device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="15dp" android:layout_marginBottom="10dp" android:singleLine="true" android:layout_marginStart="24dp"/>
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/llType" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="13sp" android:textColor="@color/mj_color_gray_heavier" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:maxWidth="200dp" android:text="@string/feedback_chose_type" android:singleLine="true" android:layout_marginStart="24dp"/>
                <TextView android:textSize="12sp" android:textColor="@color/mj_color_green_normal" android:gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/tvType" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:drawableRight="@drawable/mj_webp_widget_second_arrow_nor" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/gray_border_radius_2" android:layout_width="match_parent" android:layout_height="200dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
                <EditText android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_gray_normal" android:textColorHint="@color/mj_color_gray_lighter" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/content" android:background="@null" android:padding="14dp" android:layout_width="match_parent" android:layout_height="130dp" android:hint="@string/content_description" android:textCursorDrawable="@null" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
                <com.xiaomi.smarthome.feedback.view.ImagePickerPreview android:id="@+id/image_pick_preview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:contentDescription="@string/feedback_pcik_image_desc" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0"/>
                <TextView android:textSize="12sp" android:textColor="@color/mj_color_gray_normal" android:ellipsize="end" android:gravity="center" android:id="@+id/add_new_image" android:clickable="false" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginLeft="14dp" android:layout_marginBottom="14dp" android:text="@string/feedback_pcik_image_desc" android:maxLines="2" android:textAlignment="center" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/image_pick_preview"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <EditText android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_gray_normal" android:textColorHint="@color/mj_color_gray_lighter" android:id="@+id/et_contact" android:background="@drawable/gray_border_radius_2" android:paddingLeft="14dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:hint="@string/feedback_contact_tips" android:singleLine="true" android:textCursorDrawable="@null" android:paddingStart="14dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
            <EditText android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_gray_normal" android:textColorHint="@color/mj_color_gray_lighter" android:id="@+id/et_router_model" android:background="@drawable/gray_border_radius_2" android:paddingLeft="14dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:hint="@string/feedback_router_model_tips" android:singleLine="true" android:textCursorDrawable="@null" android:paddingStart="14dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </ScrollView>
    <TextView android:textSize="13sp" android:gravity="center" android:id="@+id/submit_with_log" android:layout_width="match_parent" android:layout_height="42dp" android:layout_marginLeft="24dp" android:layout_marginTop="10dp" android:layout_marginRight="24dp" android:layout_marginBottom="10dp" android:text="@string/commit_with_log" android:layout_alignParentBottom="true" style="@style/ConfirmNormalBtn"/>
    <TextView android:textSize="13sp" android:textColor="@color/mj_color_gray_normal" android:gravity="center" android:id="@+id/submit" android:background="@drawable/gray_border_radius_2" android:layout_width="match_parent" android:layout_height="42dp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="24dp" android:text="@string/commit" android:layout_alignParentBottom="true"/>
</LinearLayout>
