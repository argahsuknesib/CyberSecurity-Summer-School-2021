<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/log_content" android:background="@drawable/mj_color_white_00_transparent" android:layout_width="match_parent" android:layout_height="53dp">
    <RelativeLayout android:id="@+id/log_time_line" android:layout_width="25dp" android:layout_height="53dp" android:layout_marginLeft="23.5dp">
        <ImageView android:background="@drawable/log_axis_line" android:layout_width="wrap_content" android:layout_height="53dp" android:layout_centerHorizontal="true" android:importantForAccessibility="no"/>
        <ImageView android:id="@+id/feed_item_line_circle_bottom" android:background="@drawable/log_axis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:importantForAccessibility="no"/>
    </RelativeLayout>
    <TextView android:textSize="@dimen/font_size_11sp" android:textColor="@color/mj_color_black_80_transparent" android:id="@+id/log_detail_right_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="17dp" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/log_text_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_toLeftOf="@+id/log_detail_right_text" android:layout_toRightOf="@+id/log_time_line" android:layout_centerVertical="true">
        <TextView android:textSize="@dimen/font_size_3" android:textColor="@color/mj_color_gray_heavier" android:id="@+id/log_title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="@dimen/font_size_5" android:textColor="@color/mj_color_gray_lighter" android:id="@+id/log_detail_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:id="@+id/bottom_line" android:background="@color/mj_color_gray_lightest" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="17dp" android:layout_marginRight="17dp" android:layout_toRightOf="@+id/log_time_line" android:layout_alignParentBottom="true"/>
</RelativeLayout>
