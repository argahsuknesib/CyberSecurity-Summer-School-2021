            <LinearLayout android:orientation="vertical" android:id="@+id/recommend_room_noimg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp">
                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/multikey_noroom_hint" android:importantForAccessibility="no"/>
                <TextView android:textSize="12sp" android:textColor="@color/mj_color_txt_hint" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/multikey_noroom_hint"/>
            </LinearLayout>
            <View android:layout_gravity="bottom" android:background="@color/mj_color_separator" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="24dp" android:layout_marginTop="23dp"/>
        </LinearLayout>
    </ScrollView>
