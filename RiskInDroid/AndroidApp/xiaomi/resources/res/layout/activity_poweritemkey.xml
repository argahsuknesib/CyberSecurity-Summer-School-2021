            <TextView android:textSize="@dimen/font_size_11sp" android:textColor="@color/mj_color_red_normal" android:id="@+id/client_remark_input_view_text" android:paddingTop="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp"/>
