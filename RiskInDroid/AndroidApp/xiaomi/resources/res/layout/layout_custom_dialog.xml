<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/background_custom_dialog" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:layout_gravity="center" android:id="@+id/customDialogTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_22" android:layout_marginTop="@dimen/dimen_14" android:layout_marginRight="@dimen/dimen_22" style="@style/TextAppearance.RobotoRegular.Title"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ProgressBar android:id="@+id/progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:layout_centerInParent="true"/>
        <TextView android:gravity="start" android:id="@+id/customDialogMessage" android:padding="@dimen/dimen_22" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextAppearance.RobotoRegular.SubTitle"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/customDialogButtonCancel" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button android:textColor="@color/otexColorAccent" android:id="@+id/customDialogButtonOk" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
