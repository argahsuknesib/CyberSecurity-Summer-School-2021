<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:padding="1px" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_album_item" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <FrameLayout android:id="@+id/checkbox_container" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="3dp" android:layout_marginBottom="3dp" android:layout_alignRight="@+id/iv_album_item" android:layout_alignBottom="@+id/iv_album_item">
        <Button android:textSize="12sp" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/checkbox" android:background="@mipmap/ht_photo_unselected_white" android:layout_width="20dp" android:layout_height="20dp" style="@style/Widget.AppCompat.Button.Borderless"/>
    </FrameLayout>
    <View android:id="@+id/view_background" android:background="@color/ht_frame_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/iv_photo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_camera_black" android:layout_centerInParent="true"/>
</RelativeLayout>
