<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="14dp" android:textColor="@color/gst_text_color" android:gravity="center_vertical" android:id="@+id/item_title" android:layout_width="wrap_content" android:layout_height="50dp"/>
    <RelativeLayout android:id="@+id/rl_item_v2" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/iv_search_top_image" android:layout_width="55dp" android:layout_height="55dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:layout_marginBottom="15dp" android:scaleType="centerCrop"/>
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="13sp" android:textColor="@color/gst_text_color" android:ellipsize="end" android:id="@+id/tv_search_top_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginRight="37dp" android:maxLines="1" android:layout_toRightOf="@+id/iv_search_top_image"/>
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12sp" android:textColor="@color/orange_red" android:id="@+id/tv_search_top_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_toRightOf="@+id/iv_search_top_image" android:layout_below="@+id/tv_search_top_title"/>
        <com.xiaomi.shopviews.widget.customfont.CustomTextView android:textSize="12sp" android:textColor="@color/order_grey" android:id="@+id/tv_search_top_old_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="4dp" android:layout_toRightOf="@+id/tv_search_top_price" android:layout_below="@+id/tv_search_top_title"/>
        <ImageView android:layout_width="17dp" android:layout_height="17dp" android:layout_marginRight="10dp" android:src="@drawable/feature_search_icon_search_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
