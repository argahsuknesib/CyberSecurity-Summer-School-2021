<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingLeft="@dimen/std_list_padding_left" android:paddingRight="@dimen/std_list_padding_left" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/font_size_15sp" android:textStyle="bold" android:textColor="@color/mj_color_black" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_share_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/miio_setting_share_short" android:singleLine="true"/>
    <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/mj_color_gray_normal" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/share_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:singleLine="true"/>
    <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center_horizontal" android:id="@+id/device_img" android:layout_width="160dp" android:layout_height="160dp" android:layout_marginTop="13dp" android:scaleType="fitCenter"/>
    <RelativeLayout android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/mj_color_gray_normal" android:ellipsize="end" android:gravity="center" android:id="@+id/device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerInParent="true"/>
        <com.xiaomi.smarthome.library.common.widget.EllipsesProgressTextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/mj_color_gray_normal" android:id="@+id/progress_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/device_name"/>
    </RelativeLayout>
</LinearLayout>
