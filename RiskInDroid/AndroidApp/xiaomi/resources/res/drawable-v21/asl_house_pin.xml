<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:id="@+id/house_inactive" android:drawable="@drawable/device_icon_normal" app:state_house_inactive="true"/>
    <item android:id="@+id/pin" android:drawable="@drawable/device_icon_pin_active" app:state_pin="true"/>
    <item android:id="@+id/house" android:drawable="@drawable/device_icon_active"/>
    <transition android:drawable="@drawable/avd_house_to_pin" android:toId="@+id/pin" android:fromId="@+id/house"/>
    <transition android:drawable="@drawable/avd_pin_2_house" android:toId="@+id/house" android:fromId="@+id/pin"/>
</animated-selector>
