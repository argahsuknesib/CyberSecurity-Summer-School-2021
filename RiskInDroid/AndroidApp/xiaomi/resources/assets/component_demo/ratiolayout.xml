<VHLayout
        flag="flag_exposure|flag_clickable"
        orientation="V"
        layoutWidth="match_parent"
        layoutHeight="match_parent"
>
    <VText
            text="Title: orientation = H"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <RatioLayout
            orientation="H"
            layoutWidth="match_parent"
            layoutHeight="150"
        >
        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0000FF"
                textSize="12"
                layoutRatio="1"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0088FF"
                textSize="12"
                layoutRatio="1"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#8888FF"
                textSize="12"
                layoutRatio="1"
                gravity="v_center|h_center"
                text="1" />

    </RatioLayout>

    <VText
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <RatioLayout
            orientation="H"
            layoutWidth="match_parent"
            layoutHeight="150"
    >
        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0000FF"
                textSize="12"
                layoutRatio="3"
                gravity="v_center|h_center"
                text="3" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0088FF"
                textSize="12"
                layoutRatio="2"
                gravity="v_center|h_center"
                text="2" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#8888FF"
                textSize="12"
                layoutRatio="1"
                gravity="v_center|h_center"
                text="1" />

    </RatioLayout>

    <VText
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <RatioLayout
            orientation="H"
            layoutWidth="match_parent"
            layoutHeight="150"
    >
        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0000FF"
                textSize="12"
                layoutRatio="1"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0088FF"
                textSize="12"
                gravity="v_center|h_center"
                text="no ratio, width = 150" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#8888FF"
                textSize="12"
                layoutRatio="1"
                gravity="v_center|h_center"
                text="1" />

    </RatioLayout>

    <VText
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <RatioLayout
            orientation="H"
            layoutWidth="match_parent"
            layoutHeight="150"
    >
        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0000FF"
                textSize="12"
                layoutRatio="1"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="wrap_content"
                layoutHeight="150"
                background="#0088FF"
                textSize="12"
                gravity="v_center|h_center"
                text="no ratio, width = wrap_content" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#8888FF"
                textSize="12"
                layoutRatio="1"
                gravity="v_center|h_center"
                text="1" />

    </RatioLayout>

    <VText
            text="Title: orientation = V"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <RatioLayout orientation="H"
                 layoutWidth="match_parent"
                 layoutHeight="wrap_content">

        <RatioLayout
                orientation="V"
                layoutRatio="1"
                layoutWidth="match_parent"
                layoutHeight="300"
        >
            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#0000FF"
                    textSize="12"
                    layoutRatio="1"
                    gravity="v_center|h_center"
                    text="1" />

            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#0088FF"
                    textSize="12"
                    layoutRatio="1"
                    gravity="v_center|h_center"
                    text="1" />

            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#8888FF"
                    textSize="12"
                    layoutRatio="1"
                    gravity="v_center|h_center"
                    text="1" />

        </RatioLayout>


        <RatioLayout
                orientation="V"
                layoutRatio="1"
                layoutWidth="match_parent"
                layoutHeight="300"
        >
            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#0000FF"
                    textSize="12"
                    layoutRatio="3"
                    gravity="v_center|h_center"
                    text="3" />

            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#0088FF"
                    textSize="12"
                    layoutRatio="2"
                    gravity="v_center|h_center"
                    text="2" />

            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#8888FF"
                    textSize="12"
                    layoutRatio="1"
                    gravity="v_center|h_center"
                    text="1" />

        </RatioLayout>

        <RatioLayout
                orientation="V"
                layoutRatio="1"
                layoutWidth="match_parent"
                layoutHeight="300"
        >
            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#0000FF"
                    textSize="12"
                    layoutRatio="1"
                    gravity="v_center|h_center"
                    text="1" />

            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#0088FF"
                    textSize="12"
                    gravity="v_center|h_center"
                    text="height = 150" />

            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#8888FF"
                    textSize="12"
                    layoutRatio="1"
                    gravity="v_center|h_center"
                    text="1" />

        </RatioLayout>

        <RatioLayout
                orientation="V"
                layoutRatio="1"
                layoutWidth="match_parent"
                layoutHeight="300"
        >
            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#0000FF"
                    textSize="12"
                    layoutRatio="1"
                    gravity="v_center|h_center"
                    text="1" />

            <VText
                    layoutWidth="match_parent"
                    layoutHeight="wrap_content"
                    background="#0088FF"
                    textSize="12"
                    gravity="v_center|h_center"
                    text="height = wrap_content" />

            <VText
                    layoutWidth="match_parent"
                    layoutHeight="150"
                    background="#8888FF"
                    textSize="12"
                    layoutRatio="1"
                    gravity="v_center|h_center"
                    text="1" />

        </RatioLayout>
    </RatioLayout>

</VHLayout>
